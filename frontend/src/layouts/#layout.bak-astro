---
import '../styles/global.css';
import { directus } from '../lib/directus';
import { readSingleton } from '@directus/sdk';

// 1. Standard-Werte definieren (Fallback, falls DB leer oder Fehler)
let globalData = {
	project_name: 'Die Br√ºcke Portal',
	footer_text: '¬© 2025 Die Br√ºcke',
	logo: null
};

// 2. Daten aus Directus holen
try {
	// WICHTIG: readSingleton verwenden, da es sich um ein einzelnes Objekt handelt
	const result = await directus.request(readSingleton('global_settings'));
	
	if (result) {
		globalData = result;
	}
	// Erfolg im Terminal anzeigen
	console.log("‚úÖ Global Settings erfolgreich geladen:", globalData);

} catch (error) {
	// Fehler im Terminal anzeigen (z.B. 403 Forbidden)
	console.error("‚ùå Fehler beim Laden der Global Settings:", error);
}

// 3. Logo-URL zusammenbauen
const logoUrl = globalData.logo ? `http://localhost:8055/assets/${globalData.logo}` : null;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{globalData.project_name}</title>
	</head>
	<body class="bg-gray-50 flex flex-col min-h-screen">
		
		<nav class="bg-white shadow-sm sticky top-0 z-50">
			<div class="container mx-auto px-4 py-3 flex justify-between items-center">
				<a href="/" class="flex items-center gap-2 font-bold text-xl text-blue-900 hover:opacity-80 transition">
					{logoUrl ? (
						<img src={logoUrl} alt="Logo" class="h-8 w-auto object-contain" />
					) : (
						/* Fallback Icon, falls kein Logo hochgeladen wurde */
						<span class="text-2xl" role="img" aria-label="Logo">üåâ</span>
					)}
					<span>{globalData.project_name}</span>
				</a>
				
				<div class="flex gap-6 text-sm font-medium text-gray-600">
					<a href="/" class="hover:text-blue-600 transition">Startseite</a>
					</div>
			</div>
		</nav>

		<main class="flex-grow">
			<slot />
		</main>

		<footer class="bg-gray-900 text-white py-8 mt-auto border-t border-gray-800">
			<div class="container mx-auto px-4 text-center text-sm text-gray-400">
				<p>{globalData.footer_text}</p>
			</div>
		</footer>

	</body>
</html>