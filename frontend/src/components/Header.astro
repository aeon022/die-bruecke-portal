<header class="relative z-40 px-6 sm:px-10 pt-8 pb-6 flex items-center justify-between sticky top-0 bg-white border-b border-slate-100 transition-all duration-300" id="main-header">
    <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 rounded-xl bg-white border border-slate-200 flex items-center justify-center shadow-sm group-hover:border-rose-500 transition">
            <div class="w-3 h-3 rounded-sm bg-rose-500"></div>
        </div>
        <span class="text-xl font-bold font-display tracking-tight text-slate-900">{projectName}</span>
    </a>
    
    <div class="flex items-center gap-4">
        <a href="/contact" class="hidden md:inline-flex px-6 py-2.5 rounded-full bg-slate-900 text-white font-bold text-sm shadow-lg hover:bg-rose-600 transition hover:-translate-y-0.5">
            Kontakt
        </a>
        <button id="btnOpenNav" class="w-12 h-12 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-900 hover:bg-slate-50 transition cursor-pointer shadow-sm" aria-label="Menü öffnen">
            <i class="fa-solid fa-bars text-xl"></i>
        </button>
    </div>
</header>

<script>
  function initHeader() {
    const btnOpenNav = document.getElementById('btnOpenNav');
    const btnCloseNav = document.getElementById('btnCloseNav');
    const navOverlay = document.getElementById('navOverlay');
    const navLinks = navOverlay?.querySelectorAll('a');

    const toggleMenu = (show) => {
        if (!navOverlay) return;

        if (show) {
            // Wichtig gegen FOUC: Overlay ist per HTML `hidden` versteckt (ohne CSS)
            navOverlay.hidden = false;

            // In der nächsten Frame-Kante öffnen, damit Transitionen sauber greifen
            requestAnimationFrame(() => {
                navOverlay.classList.add('open');
                navOverlay.setAttribute('aria-hidden', 'false');
            });

            document.body.style.overflow = 'hidden'; // Scrollen verhindern
            return;
        }

        navOverlay.classList.remove('open');
        navOverlay.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = ''; // Scrollen erlauben

        // Nach der Close-Transition wieder komplett aus dem Layout nehmen
        const prefersReduced = window.matchMedia?.('(prefers-reduced-motion: reduce)')?.matches;
        if (prefersReduced) {
            navOverlay.hidden = true;
            return;
        }

        const hide = () => {
            navOverlay.hidden = true;
        };

        // Falls Transition fehlt/anders ist, sorgt Timeout als Fallback dafür, dass es trotzdem versteckt wird
        navOverlay.addEventListener('transitionend', hide, { once: true });
        setTimeout(hide, 450);
    };

    if(btnOpenNav) {
        // Alten Listener entfernen (Cloning Trick), falls Astro neu rendert
        const newBtn = btnOpenNav.cloneNode(true);
        btnOpenNav.parentNode.replaceChild(newBtn, btnOpenNav);
        newBtn.addEventListener('click', () => toggleMenu(true));
    }

    if(btnCloseNav) {
         // Auch hier sicherheitshalber neu binden
        const newClose = btnCloseNav.cloneNode(true);
        btnCloseNav.parentNode.replaceChild(newClose, btnCloseNav);
        newClose.addEventListener('click', () => toggleMenu(false));
    }
    
    navLinks?.forEach(link => {
        link.addEventListener('click', () => toggleMenu(false));
    });
  }

  // Initialisieren
  initHeader();
  
  // Neu initialisieren bei Astro View Transitions
  document.addEventListener('astro:after-swap', initHeader);
</script>