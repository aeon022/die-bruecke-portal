---
import { getGlobalSettings } from '../lib/api';

const settings = await getGlobalSettings();
const projectName = settings?.project_name || 'Die Brücke';
---

<div id="navOverlay" hidden class="absolute inset-0 z-50 nav-overlay bg-slate-800 text-white flex flex-col h-fit overflow-hidden rounded-b-4xl" aria-hidden="true">
    
    <div class="flex items-center justify-between px-6 sm:px-12 py-6 shrink-0 border-b border-white/10 bg-slate-800">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center border border-white/10">
                <div class="w-3 h-3 rounded-sm bg-rose-500"></div>
            </div>
            <span class="text-xl font-bold font-display tracking-tight">{projectName}</span>
        </div>
        <button id="btnCloseNav" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white hover:text-slate-900 transition duration-300 cursor-pointer" aria-label="Menü schließen">
            <i class="fa-solid fa-xmark text-xl"></i>
        </button>
    </div>

    <div class="flex-grow flex items-center justify-center w-full bg-slate-800">
        <nav class="grid grid-cols-1 md:grid-cols-3 w-full">
            
            <a href="/events" class="group relative p-8 md:p-12 border-b border-white/10 md:border-r hover:bg-white/5 transition duration-300 flex flex-col justify-center">
                <span class="block text-rose-500 font-bold mb-3 text-xs tracking-widest uppercase">01</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight group-hover:text-rose-500 transition-colors">Programm</span>
                <span class="block mt-3 text-slate-400 text-sm lg:text-base group-hover:text-white transition-colors font-medium">Konzerte, Workshops & Bühne.</span>
            </a>

            <a href="/services" class="group relative p-8 md:p-12 border-b border-white/10 md:border-r hover:bg-white/5 transition duration-300 flex flex-col justify-center">
                <span class="block text-rose-500 font-bold mb-3 text-xs tracking-widest uppercase">02</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight group-hover:text-rose-500 transition-colors">Angebote</span>
                <span class="block mt-3 text-slate-400 text-sm lg:text-base group-hover:text-white transition-colors font-medium">Mobile Dienste & Beratung.</span>
            </a>

           <a href="/rentals" class="group relative p-8 md:p-12 border-b border-white/10 hover:bg-white/5 transition duration-300 flex flex-col justify-center">
                <span class="block text-rose-500 font-bold mb-3 text-xs tracking-widest uppercase">03</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight group-hover:text-rose-500 transition-colors">Dein Raum</span>
                <span class="block mt-3 text-slate-400 text-sm lg:text-base group-hover:text-white transition-colors font-medium">Seminare, Feiern & Technik.</span>
            </a>

            <a href="/about" class="group relative p-8 md:p-12 border-b md:border-b-0 border-white/10 md:border-r hover:bg-white/5 transition duration-300 flex flex-col justify-center">
                <span class="block text-rose-500 font-bold mb-3 text-xs tracking-widest uppercase">04</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight group-hover:text-rose-500 transition-colors">Über uns</span>
                <span class="block mt-3 text-slate-400 text-sm lg:text-base group-hover:text-white transition-colors font-medium">Das Team & unsere Mission.</span>
            </a>

            <div class="group relative p-8 md:p-12 border-b md:border-b-0 border-white/10 md:border-r flex flex-col justify-center opacity-50 cursor-not-allowed bg-slate-800/50">
                <span class="block text-slate-600 font-bold mb-3 text-xs tracking-widest uppercase">Coming Soon</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight text-slate-600">Shop</span>
                <span class="block mt-3 text-slate-600 text-sm lg:text-base font-medium">Merch & Tickets.</span>
            </div>

            <a href="/contact" class="group relative p-8 md:p-12 hover:bg-white/5 transition duration-300 flex flex-col justify-center">
                <span class="block text-rose-500 font-bold mb-3 text-xs tracking-widest uppercase">06</span>
                <span class="block text-3xl md:text-4xl lg:text-5xl font-display font-extrabold tracking-tight group-hover:text-rose-500 transition-colors">Kontakt</span>
                <span class="block mt-3 text-slate-400 text-sm lg:text-base group-hover:text-white transition-colors font-medium">Anfahrt & Öffnungszeiten.</span>
            </a>

        </nav>
    </div>

    <div class="px-6 sm:px-12 py-8 bg-slate-800 border-t border-white/10 shrink-0">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 text-slate-400 text-sm font-medium">
            <div class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-rose-500 animate-pulse"></span>
                <span class="text-white">Brückenstraße 1, 8020 Graz</span>
            </div>
            <div class="flex gap-8">
                <a href="#" class="hover:text-white hover:underline decoration-rose-500 underline-offset-4 transition">Instagram</a>
                <a href="#" class="hover:text-white hover:underline decoration-rose-500 underline-offset-4 transition">Facebook</a>
            </div>
        </div>
    </div>
</div>

<header class="relative z-40 px-6 sm:px-10 pt-8 pb-6 flex items-center justify-between sticky top-0 bg-white/90 backdrop-blur-md border-b border-slate-100 transition-all duration-300" id="main-header">
    <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 rounded-xl bg-white border border-slate-200 flex items-center justify-center shadow-sm group-hover:border-rose-500 transition">
            <div class="w-3 h-3 rounded-sm bg-rose-500"></div>
        </div>
        <span class="text-xl font-bold font-display tracking-tight text-slate-900">{projectName}</span>
    </a>
    
    <div class="flex items-center gap-4">
        <a href="/contact" class="hidden md:inline-flex px-6 py-2.5 rounded-full bg-slate-900 text-white font-bold text-sm shadow-lg hover:bg-rose-600 transition hover:-translate-y-0.5">
            Jetzt anfragen
        </a>
        <button id="btnOpenNav" class="w-12 h-12 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-900 hover:bg-slate-50 transition cursor-pointer shadow-sm" aria-label="Menü öffnen">
            <i class="fa-solid fa-bars text-xl"></i>
        </button>
    </div>
</header>

<script>
  function initHeader() {
    const btnOpenNav = document.getElementById('btnOpenNav');
    const btnCloseNav = document.getElementById('btnCloseNav');
    const navOverlay = document.getElementById('navOverlay');
    const navLinks = navOverlay?.querySelectorAll('a');

    const toggleMenu = (show) => {
        if (!navOverlay) return;

        if (show) {
            navOverlay.hidden = false;
            requestAnimationFrame(() => {
                navOverlay.classList.add('open');
                navOverlay.setAttribute('aria-hidden', 'false');
            });
            document.body.style.overflow = 'hidden';
            return;
        }

        navOverlay.classList.remove('open');
        navOverlay.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';

        const prefersReduced = window.matchMedia?.('(prefers-reduced-motion: reduce)')?.matches;
        if (prefersReduced) {
            navOverlay.hidden = true;
            return;
        }

        const hide = () => {
            navOverlay.hidden = true;
        };
        navOverlay.addEventListener('transitionend', hide, { once: true });
        setTimeout(hide, 450);
    };

    if(btnOpenNav) {
        const newBtn = btnOpenNav.cloneNode(true);
        btnOpenNav.parentNode.replaceChild(newBtn, btnOpenNav);
        newBtn.addEventListener('click', () => toggleMenu(true));
    }

    if(btnCloseNav) {
        const newClose = btnCloseNav.cloneNode(true);
        btnCloseNav.parentNode.replaceChild(newClose, btnCloseNav);
        newClose.addEventListener('click', () => toggleMenu(false));
    }
    
    navLinks?.forEach(link => {
        link.addEventListener('click', () => toggleMenu(false));
    });
  }

  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>