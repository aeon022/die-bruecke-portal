---
import { getGlobalSettings } from '../lib/api';

const settings = await getGlobalSettings();
---

<header class="bg-surface border-b border-surface-muted shadow-sm sticky top-0 z-50 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    
    <a href="/" class="text-2xl font-bold text-primary tracking-tight hover:text-secondary transition-colors duration-300 z-50 relative">
      {settings?.project_name || 'Die Brücke'}
    </a>

    <button id="menu-toggle" class="p-2 text-primary z-50 relative focus:outline-none group cursor-pointer" aria-label="Menü öffnen">
      <div class="relative w-8 h-6 flex flex-col justify-between items-end overflow-hidden pointer-events-none">
         <span id="line-1" class="w-full h-0.5 bg-current rounded-full transition-all duration-300 origin-right"></span>
         <span id="line-2" class="w-3/4 h-0.5 bg-current rounded-full transition-all duration-300 group-hover:w-full"></span>
         <span id="line-3" class="w-full h-0.5 bg-current rounded-full transition-all duration-300 origin-right"></span>
      </div>
    </button>

    <div id="mobile-menu" class="fixed inset-0 bg-surface/98 backdrop-blur-sm invisible opacity-0 transition-all duration-500 flex flex-col justify-center items-center gap-8 z-40">
      
      <div class="absolute top-10 right-10 w-96 h-96 bg-secondary/10 rounded-full blur-3xl pointer-events-none"></div>
      <div class="absolute bottom-10 left-10 w-96 h-96 bg-tangerine/10 rounded-full blur-3xl pointer-events-none"></div>

      <nav class="flex flex-col gap-8 text-center z-10">
        <a href="/events" class="mobile-link text-4xl md:text-5xl font-bold text-primary hover:text-tangerine translate-y-8 opacity-0 transition-all duration-500 delay-100">
          Veranstaltungen
        </a>
        <a href="/services" class="mobile-link text-4xl md:text-5xl font-bold text-primary hover:text-tangerine translate-y-8 opacity-0 transition-all duration-500 delay-200">
          Angebote
        </a>
        <a href="/shop" class="mobile-link text-4xl md:text-5xl font-bold text-primary hover:text-tangerine translate-y-8 opacity-0 transition-all duration-500 delay-300">
          Shop
        </a>
      </nav>

    </div>

  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const line1 = document.getElementById('line-1');
  const line2 = document.getElementById('line-2');
  const line3 = document.getElementById('line-3');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  
  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;

    if (isOpen) {
      // Öffnen
      mobileMenu.classList.remove('invisible');
      setTimeout(() => {
        mobileMenu.classList.remove('opacity-0');
      }, 10);
      
      document.body.style.overflow = 'hidden';

      // Burger -> X Animation
      line1.classList.add('-rotate-45', 'translate-y-[-1px]');
      line2.classList.add('opacity-0', 'translate-x-full');
      line3.classList.add('rotate-45', 'translate-y-[1px]');

      // Links animieren
      mobileLinks.forEach(link => {
        link.classList.remove('translate-y-8', 'opacity-0');
      });

    } else {
      // Schließen
      mobileMenu.classList.add('opacity-0');
      document.body.style.overflow = '';

      // Burger Reset
      line1.classList.remove('-rotate-45', 'translate-y-[-1px]');
      line2.classList.remove('opacity-0', 'translate-x-full');
      line3.classList.remove('rotate-45', 'translate-y-[1px]');
      
      mobileLinks.forEach(link => {
        link.classList.add('translate-y-8', 'opacity-0');
      });

      // Wait for transition
      setTimeout(() => {
        if (!isOpen) mobileMenu.classList.add('invisible');
      }, 500);
    }
  }

  if (menuToggle) {
      menuToggle.addEventListener('click', toggleMenu);
  }

  mobileLinks.forEach(link => {
    link.addEventListener('click', toggleMenu);
  });
</script>