        <div id="logo-container" class="w-10 h-10 rounded-xl bg-white border border-slate-200 flex items-center justify-center shadow-sm group-hover:border-rose-500 transition-all duration-300">
            <div class="w-3 h-3 rounded-sm bg-rose-500"></div>
        </div>
        <span class="text-xl font-bold font-display tracking-tight text-slate-900">{projectName}</span>
    </a>
    
    <div class="flex items-center gap-4">
        <a href="/projects" class="hidden lg:inline-flex px-6 py-2.5 rounded-full bg-slate-100 text-slate-900 font-bold text-sm hover:bg-rose-50 transition border border-slate-200">
            Zu den Projekten
        </a>

        <a href="/contact" class="hidden md:inline-flex px-6 py-2.5 rounded-full bg-slate-900 text-white font-bold text-sm shadow-lg hover:bg-rose-600 transition hover:-translate-y-0.5">
            Jetzt anfragen
        </a>
        <button id="btnOpenNav" class="w-12 h-12 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-900 hover:bg-slate-50 transition cursor-pointer shadow-sm" aria-label="Menü öffnen">
            <i class="fa-solid fa-bars text-xl"></i>
        </button>
    </div>
</header>

<style is:global>
    /* 1. SCROLL STOP LOGIK */
    body.locked {
        overflow: hidden !important;
        height: 100vh !important;
        width: 100%;
        position: fixed; /* Wichtig für iOS */
    }

    /* 2. OVERLAY TRANSITIONS */
    .nav-transition {
        transition-property: transform, opacity, visibility;
        transition-duration: 500ms;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* ZUSTAND: GESCHLOSSEN */
    #navOverlay[data-state="closed"] {
        transform: translateY(-100%);
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
    }

    /* ZUSTAND: OFFEN */
    #navOverlay[data-state="open"] {
        transform: translateY(0);
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }
</style>

<script>
  function init() {
    // --- ELEMENTE ---
    const btnOpenNav = document.getElementById('btnOpenNav');
    const btnCloseNav = document.getElementById('btnCloseNav');
    const navOverlay = document.getElementById('navOverlay');
    const navLinks = navOverlay?.querySelectorAll('a');
    
    // Header Elemente für Shrink
    const mainHeader = document.getElementById('main-header');
    const logoContainer = document.getElementById('logo-container');

    // --- 1. MENÜ LOGIK (Scroll Lock) ---
    const toggleMenu = (isOpen) => {
        if (!navOverlay) return;

        if (isOpen) {
            navOverlay.setAttribute('data-state', 'open');
            navOverlay.setAttribute('aria-hidden', 'false');
            // RADIKALER SCROLL STOP
            document.body.classList.add('locked');
        } else {
            navOverlay.setAttribute('data-state', 'closed');
            navOverlay.setAttribute('aria-hidden', 'true');
            // SCROLL FREIGEBEN
            document.body.classList.remove('locked');
        }
    };

    // Event Listener neu setzen (Clean clone)
    if(btnOpenNav) {
        const newBtn = btnOpenNav.cloneNode(true);
        btnOpenNav.parentNode.replaceChild(newBtn, btnOpenNav);
        newBtn.addEventListener('click', () => toggleMenu(true));
    }

    if(btnCloseNav) {
        const newClose = btnCloseNav.cloneNode(true);
        btnCloseNav.parentNode.replaceChild(newClose, btnCloseNav);
        newClose.addEventListener('click', () => toggleMenu(false));
    }
    
    navLinks?.forEach(link => {
        link.addEventListener('click', () => toggleMenu(false));
    });

    // --- 2. HEADER SHRINK LOGIK ---
    const handleScroll = () => {
        if (!mainHeader || !logoContainer) return;

        if (window.scrollY > 20) {
            // Zustand: GESCROLLT (Kleiner)
            // Padding reduzieren: pt-8 pb-6 -> py-3
            mainHeader.classList.remove('pt-8', 'pb-6');
            mainHeader.classList.add('py-3', 'shadow-md');
            
            // Logo verkleinern: w-10 h-10 -> w-8 h-8
            logoContainer.classList.remove('w-10', 'h-10', 'rounded-xl');
            logoContainer.classList.add('w-8', 'h-8', 'rounded-lg');
            
        } else {
            // Zustand: OBEN (Groß)
            // Padding zurücksetzen
            mainHeader.classList.remove('py-3', 'shadow-md');
            mainHeader.classList.add('pt-8', 'pb-6');
            
            // Logo zurücksetzen
            logoContainer.classList.remove('w-8', 'h-8', 'rounded-lg');
            logoContainer.classList.add('w-10', 'h-10', 'rounded-xl');
        }
    };

    // Scroll Listener hinzufügen (Debounced oder direkt)
    window.addEventListener('scroll', handleScroll, { passive: true });
    // Initial check (falls man neulädt und schon unten ist)
    handleScroll();
  }

  // Init bei Page Load und Navigation
  init();
  document.addEventListener('astro:after-swap', init);
</script>