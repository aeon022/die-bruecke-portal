---
import { getGlobalSettings } from '../lib/api';

const settings = await getGlobalSettings();
---

<header class="bg-surface border-b border-surface-muted sticky top-0 z-50">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    
    <a href="/" class="text-2xl font-bold text-primary tracking-tight hover:text-secondary transition-colors duration-300">
      {settings?.project_name || 'Die Brücke'}
    </a>

    <nav class="hidden md:flex gap-8">
      <a href="/events" class="text-gray-600 hover:text-tangerine font-medium transition-colors">Veranstaltungen</a>
      <a href="/services" class="text-gray-600 hover:text-tangerine font-medium transition-colors">Angebote</a>
      <a href="/shop" class="text-gray-600 hover:text-tangerine font-medium transition-colors">Shop</a>
    </nav>

    <button class="md:hidden p-2 text-primary">
      <span class="sr-only">Menü öffnen</span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>

  </div>
</header>