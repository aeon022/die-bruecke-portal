---
const currentYear = new Date().getFullYear();

// SOCIAL MEDIA CONFIG
// TODO: Ersetze die '#' bei LinkedIn, YouTube und X mit den echten Profil-URLs!
const socials = [
  { icon: 'fa-facebook-f', href: 'https://www.facebook.com/brueckegraz', label: 'Facebook' },
  { icon: 'fa-instagram', href: 'https://www.instagram.com/die.bruecke.graz', label: 'Instagram' },
  { icon: 'fa-linkedin-in', href: '#', label: 'LinkedIn' },
  { icon: 'fa-youtube', href: '#', label: 'YouTube' },
  { icon: 'fa-x-twitter', href: '#', label: 'X' },
];

// SÄULE 2: ANGEBOTE
const offers = [
  { name: 'Kultur & Tickets', href: '/events' },
  { name: 'Services & Alltag', href: '/services' },
  { name: 'Camps & Urlaub', href: '/camps' },
  { name: 'Beratung & Info', href: '/info' },
];

// SÄULE 3: VEREIN
const association = [
  { name: 'Über uns', href: '/about' },
  { name: 'Team & Kontakt', href: '/contact' },
  { name: 'Partner & Förderer', href: '/supporters' },
  { name: 'Raumvermietung', href: '/space' },
];

const legals = [
  { name: 'Impressum', href: '/impressum' },
  { name: 'Datenschutz', href: '/datenschutz' },
];
---

<footer class="mt-auto relative">
    <div class="bg-slate-900 border-t border-slate-800 rounded-t-[48px] overflow-hidden ring-1 ring-slate-950/10 shadow-2xl shadow-slate-950/15 relative">
        
        {/* Ambient Light */}
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-indigo-900/20 rounded-full blur-[120px] pointer-events-none -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-rose-900/10 rounded-full blur-[100px] pointer-events-none translate-y-1/2 -translate-x-1/4"></div>

        <div class="max-w-7xl mx-auto px-6 sm:px-10 py-16 lg:py-20 relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
                
                {/* 1. MARKE & SOCIALS */}
                <div class="space-y-6">
                    <a href="/" class="block text-2xl font-display font-bold text-white tracking-tight">
                        Die Brücke<span class="text-rose-500">.</span>
                    </a>
                    <p class="text-slate-400 text-sm leading-relaxed max-w-xs">
                        Inklusion, Kultur und Begegnung mitten in Graz. 
                        Wir sind das Backup für deine Unabhängigkeit.
                    </p>
                    
                    {/* SOCIAL ICONS LOOP */}
                    <div class="flex flex-wrap gap-3">
                        {socials.map((social) => (
                            <a 
                                href={social.href} 
                                target="_blank" 
                                aria-label={social.label} 
                                class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-rose-600 hover:text-white transition-all duration-300 hover:-translate-y-1 shadow-lg shadow-transparent hover:shadow-rose-900/50"
                            >
                                <i class={`fa-brands ${social.icon}`}></i>
                            </a>
                        ))}
                    </div>
                </div>

                {/* 2. ANGEBOTE */}
                <div>
                    <h3 class="font-display font-bold text-white mb-6">Angebote</h3>
                    <ul class="space-y-3">
                        {offers.map((link) => (
                            <li>
                                <a href={link.href} class="text-slate-400 hover:text-rose-400 transition-colors text-sm font-medium flex items-center gap-2 group">
                                    <span class="w-1 h-1 rounded-full bg-slate-600 group-hover:bg-rose-500 transition-colors"></span>
                                    {link.name}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>

                {/* 3. VEREIN */}
                <div>
                    <h3 class="font-display font-bold text-white mb-6">Verein</h3>
                    <ul class="space-y-3">
                        {association.map((link) => (
                            <li>
                                <a href={link.href} class="text-slate-400 hover:text-indigo-400 transition-colors text-sm font-medium flex items-center gap-2 group">
                                    <span class="w-1 h-1 rounded-full bg-slate-600 group-hover:bg-indigo-500 transition-colors"></span>
                                    {link.name}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>

                {/* 4. CTA */}
                <div class="bg-slate-800/50 rounded-2xl p-6 border border-slate-700/50">
                    <h3 class="font-display font-bold text-white mb-3">Werde Brückenpfeiler</h3>
                    <p class="text-slate-400 text-sm mb-5 leading-relaxed">
                        Dein Einsatz zählt. Ob Spende, Ehrenamt oder Zivildienst – bau mit uns an der Zukunft.
                    </p>
                    <a href="/join" class="inline-flex items-center justify-center w-full bg-white hover:bg-indigo-50 text-slate-900 font-bold py-3 rounded-xl transition-all duration-300 text-sm group">
                        Jetzt mitmachen <i class="fa-solid fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform text-rose-500"></i>
                    </a>
                </div>

            </div>

            {/* BOTTOM BAR */}
            <div class="mt-16 pt-8 border-t border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-slate-500 text-xs flex flex-col md:flex-row gap-1 md:gap-4 text-center md:text-left">
                    <span>&copy; {currentYear} Die Brücke.</span>
                    <span class="hidden md:inline text-slate-700">|</span>
                    <span>ZVR: 747612623</span>
                    <span class="hidden md:inline text-slate-700">|</span>
                    <span class="flex items-center gap-2 justify-center md:justify-start">
                        <i class="fa-solid fa-location-dot text-rose-500/70"></i> Grabenstraße 39a, Graz
                    </span>
                </div>
                
                <div class="flex gap-6">
                    {legals.map((legal) => (
                        <a href={legal.href} class="text-slate-500 hover:text-white text-xs font-bold uppercase tracking-wider transition-colors">
                            {legal.name}
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </div>
</footer>