---
import Layout from '../layouts/Layout.astro';
import { directus } from '../lib/directus';
import { readItems } from '@directus/sdk';

const globalSettings = await directus.request(readItems('global_settings'));
const events = await directus.request(readItems('events'));

// Funktion um die volle Bild-URL zu bauen
const getImageUrl = (imageId) => {
  return imageId ? `http://localhost:8055/assets/${imageId}` : null;
};
---

<Layout>
  <div class="container mx-auto p-8">
    
    <header class="mb-12 border-b pb-4">
      <h1 class="text-4xl font-bold text-blue-900">
        {globalSettings.project_name || 'Portal'}
      </h1>
      <p class="text-gray-600 mt-2">Willkommen auf dem neuen Portal.</p>
    </header>

    <section>
      <h2 class="text-2xl font-semibold mb-6">Kommende Veranstaltungen</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        {events.map((event: any) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100 flex flex-col h-full">
            
            {/* --- BILD LOGIK --- */}
            {event.image ? (
              <img 
                src={getImageUrl(event.image)} 
                alt={event.title} 
                class="w-full h-48 object-cover"
              />
            ) : (
              // Platzhalter, wenn kein Bild da ist
              <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400">
                Kein Bild vorhanden
              </div>
            )}

            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-xl font-bold mb-2 text-gray-900">{event.title}</h3>
              
              <p class="text-sm text-blue-600 font-semibold mb-4">
                {new Date(event.start_date).toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit', year: 'numeric' })}
              </p>
              
              {/* --- HTML FIX (set:html) --- */}
              {/* prose-Klasse sorgt dafür, dass Listen/Überschriften im Text gut aussehen */}
              <div class="prose prose-sm text-gray-600 mb-4 line-clamp-3" set:html={event.description}></div>

              <div class="mt-auto">
                 <a href={`/events/${event.slug}`} class="inline-block text-blue-600 hover:text-blue-800 font-medium">
                   Mehr erfahren &rarr;
                 </a>
              </div>
            </div>
          </article>
        ))}

      </div>
    </section>

  </div>
</Layout>