---
// WICHTIG: SSR fix - Diese Seite wird statisch zur Build-Zeit generiert
export const prerender = true;

import MainLayout from '../../layouts/layout.astro';
import { projects } from '../../lib/projectData';

// Wir definieren den Typ für ein Projekt automatisch basierend auf deiner Daten-Datei
type Project = typeof projects[number];

interface Props {
  project: Project;
}

// 1. Statische Pfade für alle Projekte generieren
export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// 2. Props für das aktuelle Projekt abrufen
const { project } = Astro.props;

// Hilfskonstanten für Styles
const gradientClass = project?.color || "from-slate-700 to-slate-900";

// URL & Text für Sharing generieren
// Hinweis: Für eine echte Production-URL müsstest du hier import.meta.env.SITE verwenden.
const shareTitle = encodeURIComponent(`Tolles Projekt bei der Brücke: ${project.title}`);
const shareText = encodeURIComponent(project.subtitle || project.description);
// Instagram Profil als Fallback, da direktes Teilen dort per Link nicht geht
const instagramProfile = "https://www.instagram.com/diebruecke_erfurt"; 
---

<MainLayout title={`${project.title} – Projekte`}>
    
    {/* Header Section */}
    <section class="relative pt-32 pb-20 px-6 sm:px-10 overflow-hidden">
        {/* Background Blob */}
        <div class={`absolute top-0 right-0 w-[800px] h-[800px] bg-gradient-to-br ${gradientClass} opacity-10 blur-3xl rounded-full -translate-y-1/2 translate-x-1/3 pointer-events-none`}></div>

        <div class="max-w-7xl mx-auto relative z-10">
            {/* Breadcrumb / Back Link */}
            <a href="/projects" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-slate-900 transition-colors mb-8 group">
                <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
                Zurück zur Übersicht
            </a>

            <div class="flex flex-col md:flex-row gap-8 md:items-start justify-between">
                <div>
                    <span class={`inline-block px-3 py-1 rounded-full bg-gradient-to-r ${gradientClass} text-white text-xs font-bold uppercase tracking-widest mb-6 shadow-sm`}>
                        {project.category}
                    </span>
                    <h1 class="text-5xl md:text-7xl font-display font-extrabold text-slate-900 mb-6 tracking-tighter">
                        {project.title}
                    </h1>
                    <p class="text-2xl md:text-3xl text-slate-500 font-display font-medium max-w-3xl leading-tight">
                        {project.subtitle}
                    </p>
                </div>
                
                {/* Big Icon */}
                <div class={`hidden md:flex w-32 h-32 rounded-[32px] bg-gradient-to-br ${gradientClass} items-center justify-center text-white text-6xl shadow-2xl rotate-3`}>
                    <i class={`fa-solid ${project.icon}`}></i>
                </div>
            </div>
        </div>
    </section>

    {/* Content Section */}
    <section class="pb-32 px-6 sm:px-10">
        <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
            
            {/* Main Content (Left) */}
            <div class="lg:col-span-7">
                
                {/* 1. PROJECT IMAGE (Optional) */}
                {project.image && (
                    <div class="mb-12 rounded-[32px] overflow-hidden shadow-2xl border border-slate-100">
                        <img 
                            src={project.image} 
                            alt={`Bild zum Projekt ${project.title}`} 
                            class="w-full h-auto object-cover hover:scale-105 transition-transform duration-700"
                        />
                    </div>
                )}

                <div class="prose prose-lg prose-slate prose-headings:font-display prose-headings:font-bold prose-a:text-rose-600 hover:prose-a:text-rose-700">
                    <p class="lead text-xl text-slate-600 font-medium mb-8">
                        {project.description}
                    </p>
                    {/* Rich Text Injection */}
                    <div set:html={project.content} />
                </div>

                {/* 2. PROJECT VIDEO (Optional) */}
                {project.video && (
                    <div class="mt-16">
                        <h3 class="text-2xl font-display font-bold text-slate-900 mb-6">Einblick ins Projekt</h3>
                        <div class="aspect-video rounded-[32px] overflow-hidden shadow-xl border border-slate-100 bg-slate-900">
                            <iframe 
                                width="100%" 
                                height="100%" 
                                src={`https://www.youtube-nocookie.com/embed/${project.video}`} 
                                title="YouTube video player" 
                                frameborder="0" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                allowfullscreen
                            ></iframe>
                        </div>
                    </div>
                )}

                {/* CTA Box */}
                <div class="mt-16 p-8 bg-slate-50 rounded-3xl border border-slate-100 flex flex-col sm:flex-row items-center gap-6">
                    <div class={`w-12 h-12 rounded-full bg-gradient-to-br ${gradientClass} flex items-center justify-center text-white shrink-0`}>
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div class="text-center sm:text-left">
                        <h3 class="font-bold text-slate-900 text-lg">Du hast Fragen zu diesem Projekt?</h3>
                        <p class="text-slate-500 text-sm">Schreib uns einfach eine E-Mail.</p>
                    </div>
                    <a href="mailto:hallo@diebruecke.social" class="sm:ml-auto px-6 py-3 bg-white border border-slate-200 rounded-full font-bold text-slate-700 hover:border-slate-900 hover:text-slate-900 transition-all">
                        Kontakt aufnehmen
                    </a>
                </div>
            </div>

            {/* Sidebar (Right) */}
            <div class="lg:col-span-5 space-y-8">
                
                {/* 1. Features Card */}
                <div class="bg-slate-900 text-white p-8 rounded-[40px] relative overflow-hidden">
                    <div class={`absolute inset-0 bg-gradient-to-br ${gradientClass} opacity-20`}></div>
                    <div class="relative z-10">
                        <h3 class="text-2xl font-display font-bold mb-6">Das erwartet dich</h3>
                        <ul class="space-y-4">
                            {project.features && project.features.map((feature) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-solid fa-check mt-1 text-transparent bg-clip-text bg-gradient-to-r ${gradientClass} brightness-150`}></i>
                                    <span class="text-slate-200 font-medium leading-relaxed">{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>

                {/* 2. STICKY SHARE SIDEBAR */}
                <div class="sticky top-32 bg-slate-50 p-8 rounded-[40px] border border-slate-100 shadow-sm">
                    <h3 class="font-display font-bold text-slate-900 text-lg mb-6 flex items-center gap-2">
                        <i class="fa-solid fa-share-nodes text-slate-400"></i>
                        Teilen & Sagen
                    </h3>

                    <div class="space-y-3">
                        {/* WhatsApp */}
                        <a 
                            href={`whatsapp://send?text=${shareTitle}%20-%20Mehr%20infos:%20https://diebruecke.social/projects/${project.slug}`} 
                            class="flex items-center gap-4 p-3 bg-white rounded-2xl border border-slate-100 text-slate-600 hover:text-green-600 hover:border-green-200 hover:shadow-md transition-all group"
                        >
                            <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-green-100 transition-colors">
                                <i class="fa-brands fa-whatsapp text-lg"></i>
                            </div>
                            <span class="font-bold text-sm">Via WhatsApp</span>
                        </a>

                        {/* Email */}
                        <a 
                            href={`mailto:?subject=${shareTitle}&body=Hey,%20schau%20dir%20mal%20dieses%20Projekt%20an:%20${shareText}%0A%0Ahttps://diebruecke.social/projects/${project.slug}`} 
                            class="flex items-center gap-4 p-3 bg-white rounded-2xl border border-slate-100 text-slate-600 hover:text-blue-600 hover:border-blue-200 hover:shadow-md transition-all group"
                        >
                            <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-blue-100 transition-colors">
                                <i class="fa-solid fa-envelope text-lg"></i>
                            </div>
                            <span class="font-bold text-sm">Per E-Mail senden</span>
                        </a>

                         {/* Copy Link */}
                         <button 
                            onclick={`navigator.clipboard.writeText('https://diebruecke.social/projects/${project.slug}').then(() => alert('Link kopiert!'))`}
                            class="w-full flex items-center gap-4 p-3 bg-white rounded-2xl border border-slate-100 text-slate-600 hover:text-slate-900 hover:border-slate-300 hover:shadow-md transition-all group text-left cursor-pointer"
                        >
                            <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                                <i class="fa-solid fa-link text-lg"></i>
                            </div>
                            <span class="font-bold text-sm">Link kopieren</span>
                        </button>
                    </div>

                    {/* Social Media Row */}
                    <div class="mt-8 pt-8 border-t border-slate-200">
                         <p class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-4">Social Media</p>
                         <div class="flex gap-2">
                            {/* Facebook */}
                            <a href={`https://www.facebook.com/sharer/sharer.php?u=https://diebruecke.social/projects/${project.slug}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition-colors" title="Auf Facebook teilen">
                                <i class="fa-brands fa-facebook-f"></i>
                            </a>
                            
                            {/* X (formerly Twitter) */}
                            <a href={`https://twitter.com/intent/tweet?text=${shareTitle}&url=https://diebruecke.social/projects/${project.slug}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-black hover:text-white hover:border-black transition-colors" title="Auf X posten">
                                <i class="fa-brands fa-x-twitter"></i>
                            </a>
                            
                            {/* LinkedIn */}
                            <a href={`https://www.linkedin.com/shareArticle?mini=true&url=https://diebruecke.social/projects/${project.slug}&title=${shareTitle}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-blue-700 hover:text-white hover:border-blue-700 transition-colors" title="Auf LinkedIn teilen">
                                <i class="fa-brands fa-linkedin-in"></i>
                            </a>

                            {/* Instagram (Link zum Profil) */}
                            <a href={instagramProfile} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-fuchsia-600 hover:text-white hover:border-fuchsia-600 transition-colors" title="Besuch uns auf Instagram">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                         </div>
                    </div>
                </div>

                {/* Mobile Icon (visible only on small screens) */}
                <div class="md:hidden flex items-center gap-4 p-6 bg-slate-50 rounded-3xl border border-slate-100">
                    <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${gradientClass} flex items-center justify-center text-white text-xl`}>
                        <i class={`fa-solid ${project.icon}`}></i>
                    </div>
                    <div>
                        <span class="text-xs font-bold uppercase text-slate-400">Kategorie</span>
                        <p class="font-bold text-slate-900">{project.category}</p>
                    </div>
                </div>

            </div>

        </div>
    </section>

</MainLayout>