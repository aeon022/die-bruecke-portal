---
import MainLayout from '../../layouts/MainLayout.astro';
import { projects } from '../../lib/projectData';
---

<MainLayout title="Unsere Projekte | Die Brücke">
    
    {/* --- HERO SECTION --- */}
    <section class="px-4 sm:px-6 pt-6 pb-12">
        <div class="relative bg-slate-900 rounded-[48px] overflow-hidden min-h-[50vh] flex items-center px-8 md:px-16 py-20">
            
            {/* Background Effects */}
            <div class="absolute top-0 right-0 w-2/3 h-full overflow-hidden pointer-events-none">
                <div class="absolute top-[-10%] right-[-10%] w-[600px] h-[600px] bg-rose-500/20 rounded-full blur-[120px] animate-pulse-slow"></div>
                <div class="absolute bottom-[-10%] right-[10%] w-[500px] h-[500px] bg-orange-500/10 rounded-full blur-[100px]"></div>
                <div class="absolute inset-0 bg-[url('/noise.png')] opacity-20 mix-blend-overlay"></div>
            </div>

            <div class="relative z-10 max-w-3xl">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-rose-300 text-xs font-bold uppercase tracking-widest mb-8 backdrop-blur-md">
                    <span class="w-2 h-2 rounded-full bg-rose-500 animate-pulse"></span>
                    Innovation & Kultur
                </div>
                
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-display font-bold text-white leading-[0.95] tracking-tight mb-8">
                    Formate, die <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-400 to-orange-400">bewegen.</span>
                </h1>
                
                <p class="text-xl text-slate-300 max-w-xl leading-relaxed mb-10">
                    Unsere Flaggschiff-Projekte verbinden Kultur, Soziales und Bildung auf neue Weise. 
                    Entdecke Räume für Kino, Musik und Wissen.
                </p>

                <div class="flex flex-wrap gap-4">
                    {/* FIX: cursor-pointer hinzugefügt */}
                    <button id="shuffleBtn" class="cursor-pointer px-6 py-3 rounded-full bg-white/10 hover:bg-white/20 text-white font-bold border border-white/10 transition-all flex items-center gap-2 group">
                        <i class="fa-solid fa-shuffle group-hover:rotate-180 transition-transform duration-500"></i>
                        Mix it up
                    </button>
                    <a href="#projects-grid" class="px-6 py-3 rounded-full bg-white text-slate-900 font-bold hover:bg-rose-400 hover:text-white transition-all">
                        Alle entdecken
                    </a>
                </div>
            </div>
        </div>
    </section>

    {/* --- BENTO GRID --- */}
    <section id="projects-grid" class="px-4 sm:px-6 pb-32">
        <div class="max-w-7xl mx-auto">
            
            <div id="bento-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-[minmax(350px,auto)] grid-flow-dense">
                
                {projects.map((project, index) => (
                    <a 
                        href={`/projects/${project.slug}`} 
                        /* FIX: Klasse 'bento-card' für CSS-Targeting hinzugefügt */
                        class="bento-card group relative flex flex-col justify-between rounded-[40px] p-8 overflow-hidden transition-all duration-500 bg-white border border-slate-100 shadow-xl shadow-slate-200/50"
                        data-index={index}
                    >
                        {/* Hover Gradient */}
                        <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
                        
                        {/* Top Area */}
                        <div class="relative z-10 flex justify-between items-start mb-6">
                            <div class={`icon-box w-14 h-14 rounded-2xl bg-gradient-to-br ${project.color} flex items-center justify-center text-white text-2xl shadow-lg group-hover:scale-110 transition-transform duration-500`}>
                                <i class={`fa-solid ${project.icon}`}></i>
                            </div>
                            <span class="badge px-3 py-1 rounded-full bg-slate-100 text-slate-500 text-[10px] font-bold uppercase tracking-widest border border-slate-200">
                                {project.category}
                            </span>
                        </div>
                        
                        {/* Content */}
                        <div class="relative z-10 flex-grow flex flex-col justify-center">
                            <h2 class="project-title text-3xl font-display font-bold text-slate-900 mb-4 leading-tight group-hover:text-rose-600 transition-colors">
                                {project.title}
                            </h2>
                            <p class="project-desc text-slate-500 leading-relaxed line-clamp-3 group-[.is-featured]:line-clamp-6 mb-4">
                                {project.description}
                            </p>
                        </div>

                        {/* Bottom Arrow */}
                        <div class="relative z-10 mt-auto flex items-center gap-3">
                            <span class="arrow-circle w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-slate-400 group-hover:bg-slate-900 group-hover:border-slate-900 group-hover:text-white transition-all duration-300">
                                <i class="fa-solid fa-arrow-right -rotate-45 group-hover:rotate-0 transition-transform duration-300"></i>
                            </span>
                            <span class="cta-text text-sm font-bold text-slate-900 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300">
                                Projekt ansehen
                            </span>
                        </div>

                        {/* Decorative Blob */}
                        <div class={`absolute -bottom-24 -right-24 w-64 h-64 rounded-full bg-gradient-to-br ${project.color} opacity-[0.03] group-hover:scale-150 transition-transform duration-700 blur-3xl pointer-events-none`}></div>
                    </a>
                ))}

                {/* --- STATIC CARD --- */}
                <div class="bento-card static-card relative rounded-[40px] p-8 min-h-[350px] flex flex-col justify-center items-center text-center overflow-hidden bg-slate-900 border border-slate-800">
                    <div class="absolute inset-0 opacity-20 pointer-events-none">
                         <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                            <path d="M0 100 C 20 0 50 0 100 100 Z" fill="none" stroke="white" stroke-width="0.5" vector-effect="non-scaling-stroke" opacity="0.5"/>
                         </svg>
                    </div>
                    <div class="relative z-10">
                        <div class="w-14 h-14 mx-auto rounded-full bg-white/10 flex items-center justify-center text-white text-2xl mb-6 backdrop-blur-sm">
                            <i class="fa-regular fa-lightbulb"></i>
                        </div>
                        <h3 class="text-2xl font-display font-bold text-white mb-3">
                            Hast du eine Idee?
                        </h3>
                        <a href="/contact" class="mt-4 inline-flex items-center justify-center px-6 py-2 rounded-full bg-white text-slate-900 font-bold hover:bg-rose-500 hover:text-white transition-all hover:scale-105 text-sm">
                            Schreib uns
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>

    {/* --- CSS FIXES --- */}
    <style is:global>
        /* DARK MODE OVERRIDES (Nuclear Option) */
        
        /* Hintergrund der Bento Karten */
        html.dark .bento-card {
            background-color: #0f172a !important; /* slate-900 */
            border-color: rgba(255, 255, 255, 0.1) !important;
            box-shadow: none !important;
        }

        /* Statische Karte (bleibt immer dunkel, nur Border passt sich an) */
        html.dark .static-card {
            background-color: #020617 !important; /* slate-950 */
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        /* Typografie in Karten */
        html.dark .project-title {
            color: #f8fafc !important; /* white */
        }
        
        html.dark .project-desc {
            color: #94a3b8 !important; /* slate-400 */
        }

        /* Badge in Karten */
        html.dark .badge {
            background-color: #1e293b !important; /* slate-800 */
            color: #cbd5e1 !important; /* slate-300 */
            border-color: rgba(255,255,255,0.1) !important;
        }

        /* Pfeil-Kreis */
        html.dark .arrow-circle {
            border-color: rgba(255,255,255,0.2) !important;
            color: #cbd5e1 !important;
        }
        html.dark .project-card:hover .arrow-circle {
            background-color: white !important;
            color: black !important;
        }
        
        /* CTA Text neben Pfeil */
        html.dark .cta-text {
            color: white !important;
        }
    </style>

    <script>
        function shuffleHighlights() {
            const cards = document.querySelectorAll('.bento-card'); // Updated selector
            if (cards.length === 0) return;

            // 1. Reset
            cards.forEach(card => {
                if(card.classList.contains('static-card')) return; // Skip static card
                
                card.classList.remove('is-featured', 'md:col-span-2', 'md:row-span-2');
                const title = card.querySelector('.project-title');
                if(title) {
                    title.classList.remove('md:text-5xl'); 
                    title.classList.add('text-3xl');
                }
                const iconBox = card.querySelector('.icon-box');
                if(iconBox) {
                    iconBox.classList.remove('w-20', 'h-20', 'text-4xl');
                    iconBox.classList.add('w-14', 'h-14', 'text-2xl');
                }
            });

            // 2. Pick random (excluding static card)
            const dynamicCards = Array.from(cards).filter(c => !c.classList.contains('static-card'));
            if(dynamicCards.length === 0) return;

            const randomIndex = Math.floor(Math.random() * dynamicCards.length);
            const winner = dynamicCards[randomIndex];

            // 3. Apply
            winner.classList.add('is-featured', 'md:col-span-2', 'md:row-span-2');
            
            const title = winner.querySelector('.project-title');
            if(title) {
                title.classList.remove('text-3xl');
                title.classList.add('md:text-5xl');
            }
            const iconBox = winner.querySelector('.icon-box');
            if(iconBox) {
                iconBox.classList.remove('w-14', 'h-14', 'text-2xl');
                iconBox.classList.add('w-20', 'h-20', 'text-4xl');
            }
        }

        document.addEventListener('DOMContentLoaded', shuffleHighlights);
        document.getElementById('shuffleBtn')?.addEventListener('click', shuffleHighlights);
    </script>

</MainLayout>