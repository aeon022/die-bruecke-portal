---
import MainLayout from '../../layouts/MainLayout.astro';
import { projects } from '../../lib/projectData';
---

<MainLayout title="Unsere Projekte">
    
    <section class="pt-32 pb-20 px-6 sm:px-10">
        <div class="max-w-7xl mx-auto">
            <span class="inline-block px-3 py-1 rounded-full bg-slate-100 text-slate-500 text-xs font-bold uppercase tracking-widest mb-6">
                Innovation & Kultur
            </span>
            <h1 class="text-5xl md:text-7xl font-display font-extrabold text-slate-900 mb-8 tracking-tighter">
                Formate, die <br>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-600 to-orange-500">bewegen.</span>
            </h1>
            <p class="text-xl text-slate-500 max-w-2xl leading-relaxed mb-16">
                Unsere Flaggschiff-Projekte verbinden Kultur, Soziales und Bildung auf neue Weise. Entdecke Räume für Kino, Musik und Wissen.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                
                {projects.map((project) => (
                    <a href={`/projects/${project.slug}`} class="group relative bg-slate-50 rounded-[40px] p-8 h-[500px] flex flex-col justify-between overflow-hidden hover:shadow-2xl transition-all duration-500 border border-slate-100">
                        
                        {/* Dynamic Gradient Background */}
                        <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>
                        
                        <div class="relative z-10">
                            {/* Icon Box */}
                            <div class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${project.color} flex items-center justify-center text-white text-2xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-500`}>
                                <i class={`fa-solid ${project.icon}`}></i>
                            </div>
                            
                            <span class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-2 block">
                                {project.category}
                            </span>
                            
                            <h2 class="text-3xl font-display font-bold text-slate-900 mb-3 group-hover:text-slate-900 transition-colors">
                                {project.title}
                            </h2>
                            
                            <p class="text-slate-500 leading-relaxed line-clamp-4">
                                {project.description}
                            </p>
                        </div>

                        <div class="relative z-10 flex items-center gap-2 font-bold text-slate-900 mt-auto">
                            <span class="group-hover:underline decoration-2 underline-offset-4">Projekt erkunden</span>
                            <i class="fa-solid fa-arrow-right group-hover:translate-x-2 transition-transform"></i>
                        </div>

                        {/* Decorative Blob */}
                        <div class={`absolute -bottom-20 -right-20 w-64 h-64 rounded-full bg-gradient-to-br ${project.color} opacity-10 group-hover:scale-150 transition-transform duration-700 blur-3xl`}></div>
                    </a>
                ))}

                {/* Statische Karte als 6. Element im Grid */}
                <div class="bg-slate-900 rounded-[40px] p-8 h-[500px] flex flex-col justify-center items-center text-center relative overflow-hidden">
                    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
                    <h3 class="text-3xl font-display font-bold text-white mb-4 relative z-10">Hast du eine Idee?</h3>
                    <p class="text-slate-400 mb-8 max-w-xs relative z-10">
                        Wir sind immer offen für neue Formate und Kooperationen.
                    </p>
                    <a href="/contact" class="bg-white text-slate-900 px-8 py-3 rounded-full font-bold hover:bg-rose-500 hover:text-white transition-all relative z-10">
                        Schreib uns
                    </a>
                </div>

            </div>
        </div>
    </section>

</MainLayout>