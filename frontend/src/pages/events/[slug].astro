---
import MainLayout from '../layouts/layout.astro';
import { getEventBySlug, getEvents } from '../../lib/api';

const { slug } = Astro.params;
const event = await getEventBySlug(slug as string);
const allEvents = await getEvents();

if (!event) {
  return Astro.redirect('/404');
}

// "Ähnliche Events"
const relatedEvents = allEvents
    .filter((e: any) => e.id !== event.id)
    .slice(0, 3);

const ASSET_URL = 'http://localhost:8055/assets';

// Datum Formatierung
const startDate = new Date(event.start_date);
const endDate = event.end_date ? new Date(event.end_date) : new Date(startDate.getTime() + 2 * 60 * 60 * 1000); 

const dateString = startDate.toLocaleDateString('de-DE', { day: '2-digit', month: 'long', year: 'numeric' });
const timeString = startDate.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
const weekday = startDate.toLocaleDateString('de-DE', { weekday: 'long' });

const getCatName = (cat: any) => cat.event_categories_id?.name || cat.event_categories_id?.title || 'Event';

// Google Calendar URL
const formatGCalDate = (date: Date) => date.toISOString().replace(/-|:|\.\d\d\d/g, "");
const gCalUrl = `https://www.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(event.title)}&dates=${formatGCalDate(startDate)}/${formatGCalDate(endDate)}&details=${encodeURIComponent("Infos: https://diebruecke.cc/events/" + slug)}&location=${encodeURIComponent("Die Brücke, Grabenstraße 39a, Graz")}&sf=true&output=xml`;

// Share URL
const currentUrl = `https://diebruecke.cc/events/${slug}`; 
const shareText = encodeURIComponent(`Event-Tipp: ${event.title}`);
---

<MainLayout title={event.title}>
  
    <section class="relative h-[60vh] lg:h-[70vh] min-h-[500px] overflow-hidden bg-slate-900">
        {event.image && (
            <div class="absolute inset-0 opacity-40 blur-3xl scale-110">
                <img src={`${ASSET_URL}/${event.image}`} class="w-full h-full object-cover" alt="" />
            </div>
        )}
        
        {event.image ? (
            <img 
              src={`${ASSET_URL}/${event.image}`} 
              alt={event.title} 
              class="absolute inset-0 w-full h-full object-contain md:object-cover relative z-10 transition-transform duration-[2s] hover:scale-105"
            />
        ) : (
            <div class="absolute inset-0 flex items-center justify-center z-10">
                <i class="fa-regular fa-image text-8xl text-white/20"></i>
            </div>
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-slate-50 via-slate-50/20 to-transparent z-20"></div>
    </section>

    <div class="relative z-30 -mt-32 px-4 sm:px-6 md:px-10 pb-24">
        <div class="max-w-7xl mx-auto">
            
            <div class="bg-white rounded-[40px] shadow-2xl shadow-slate-200/50 border border-slate-100 overflow-visible">
                
                <div class="grid lg:grid-cols-12 gap-0 items-start relative">
                    
                    <div class="lg:col-span-8 p-8 md:p-14 min-h-[100vh]">
                        <div class="flex flex-wrap gap-3 mb-8">
                            {event.event_categories?.map((cat: any) => (
                                <span class="bg-slate-100 text-slate-600 border border-slate-200 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
                                    {getCatName(cat)}
                                </span>
                            ))}
                        </div>

                        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-extrabold text-slate-900 tracking-tighter leading-[1.1] mb-8">
                            {event.title}
                        </h1>

                        <div class="prose prose-lg prose-slate max-w-none font-medium leading-relaxed text-slate-600 prose-headings:font-display prose-headings:font-bold prose-a:text-rose-600 hover:prose-a:text-rose-700" set:html={event.description}>
                        </div>
                    </div>

                    <aside class="lg:col-span-4 bg-slate-50/80 backdrop-blur-md border-t lg:border-t-0 lg:border-l border-slate-100 p-8 md:p-14 w-full rounded-tr-[40px] rounded-br-[40px] lg:sticky lg:top-32 lg:max-h-[calc(100vh-4rem)] overflow-y-auto custom-scrollbar">
                        
                        <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400 mb-8">Hard Facts</h3>
                        
                        <div class="space-y-8 mb-12">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white border border-slate-200 flex items-center justify-center text-rose-600 shadow-sm shrink-0">
                                    <i class="fa-regular fa-calendar text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 text-lg">{weekday}</span>
                                    <span class="block text-slate-500">{dateString}</span>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white border border-slate-200 flex items-center justify-center text-rose-600 shadow-sm shrink-0">
                                    <i class="fa-regular fa-clock text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 text-lg">{timeString} Uhr</span>
                                    <span class="block text-slate-500">Einlass ab 30 Min. vorher</span>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white border border-slate-200 flex items-center justify-center text-rose-600 shadow-sm shrink-0">
                                    <i class="fa-solid fa-location-dot text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 text-lg">Die Brücke</span>
                                    <a href="/contact" class="block text-slate-500 hover:text-rose-600 hover:underline decoration-rose-300 underline-offset-4 text-sm mt-1">
                                        Grabenstraße 39a, Graz
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <a href="/contact" class="group relative block w-full text-center bg-slate-900 text-white font-bold text-lg py-5 rounded-2xl hover:bg-rose-600 transition-all shadow-xl hover:shadow-rose-500/40 transform hover:-translate-y-1 overflow-hidden">
                                <span class="relative z-10 flex items-center justify-center gap-2">
                                    <i class="fa-solid fa-ticket"></i> Tickets kaufen
                                </span>
                                <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:animate-shine"></div>
                            </a>

                            <a href={gCalUrl} target="_blank" class="block w-full text-center bg-white border border-slate-200 text-slate-600 font-bold py-3 rounded-xl hover:bg-slate-50 hover:text-slate-900 transition-colors text-sm flex items-center justify-center gap-2">
                                <i class="fa-regular fa-calendar-plus"></i> Im Kalender speichern
                            </a>
                        </div>

                        <div class="mt-10 pt-8 border-t border-slate-200">
                            <p class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4 text-center">Freunde einladen</p>
                            
                            <div class="grid grid-cols-5 gap-2">
                                <button onclick={`window.open('https://wa.me/?text=${shareText}%20${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-emerald-50 text-emerald-600 hover:bg-emerald-500 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="WhatsApp">
                                    <i class="fa-brands fa-whatsapp text-lg"></i>
                                </button>
                                
                                <button onclick={`window.open('https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-600 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="Facebook">
                                    <i class="fa-brands fa-facebook-f text-lg"></i>
                                </button>

                                <button onclick={`window.open('https://twitter.com/intent/tweet?text=${shareText}&url=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-slate-100 text-slate-900 hover:bg-black hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="X (Twitter)">
                                    <i class="fa-brands fa-x-twitter text-lg"></i>
                                </button>

                                <button onclick={`window.open('https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-sky-50 text-sky-700 hover:bg-sky-700 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="LinkedIn">
                                    <i class="fa-brands fa-linkedin-in text-lg"></i>
                                </button>

                                <button id="share-insta" 
                                        class="h-10 rounded-lg bg-fuchsia-50 text-fuchsia-600 hover:bg-gradient-to-tr hover:from-yellow-400 hover:via-red-500 hover:to-purple-500 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center relative group" title="Link kopieren">
                                    <i class="fa-brands fa-instagram text-lg"></i>
                                </button>
                            </div>
                        </div>

                    </aside>
                </div>
            </div>

        </div>
    </div>

    {relatedEvents.length > 0 && (
        <section class="px-6 sm:px-10 pb-24 bg-white">
            <div class="max-w-7xl mx-auto">
                <div class="flex items-end justify-between mb-12 border-b border-slate-100 pb-6">
                    <h2 class="text-3xl md:text-4xl font-display font-bold text-slate-900">Das könnte dich auch interessieren</h2>
                    <a href="/events" class="hidden md:inline-flex items-center gap-2 text-rose-600 font-bold hover:text-slate-900 transition-colors">
                        Alles ansehen <i class="fa-solid fa-arrow-right"></i>
                    </a>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {relatedEvents.map((rel: any) => (
                         <a href={`/events/${rel.slug}`} class="group block bg-slate-50 rounded-[32px] p-4 hover:bg-white border border-transparent hover:border-slate-100 hover:shadow-xl transition-all duration-300">
                            <div class="aspect-[16/10] rounded-2xl overflow-hidden mb-6 relative">
                                {rel.image ? (
                                    <img src={`${ASSET_URL}/${rel.image}`} class="w-full h-full object-cover group-hover:scale-110 transition duration-700" alt={rel.title} />
                                ) : (
                                    <div class="w-full h-full bg-slate-200 flex items-center justify-center text-slate-400 font-bold text-xs uppercase">Kein Bild</div>
                                )}
                                <div class="absolute top-3 left-3 bg-white/90 backdrop-blur px-2 py-1 rounded-md text-[10px] font-bold text-rose-600 uppercase tracking-widest shadow-sm">
                                    {new Date(rel.start_date).toLocaleDateString('de-DE', { day: '2-digit', month: 'short' })}
                                </div>
                            </div>
                            <div class="px-2 pb-2">
                                <h3 class="text-xl font-display font-bold text-slate-900 mb-2 group-hover:text-rose-600 transition-colors line-clamp-2">
                                    {rel.title}
                                </h3>
                                <p class="text-slate-500 text-sm line-clamp-2">
                                    Mehr erfahren <span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
                                </p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    )}

</MainLayout>

<script>
    const btnInsta = document.getElementById('share-insta');
    
    function copyLink(btn) {
        if(!btn) return;
        navigator.clipboard.writeText(window.location.href);
        const originalHTML = btn.innerHTML;
        const originalClasses = btn.className;
        
        btn.innerHTML = '<i class="fa-solid fa-check"></i>';
        btn.className = "h-10 rounded-lg bg-green-100 text-green-700 flex items-center justify-center transition-all cursor-pointer";
        
        setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.className = originalClasses;
        }, 2000);
    }

    if (btnInsta) {
        btnInsta.addEventListener('click', () => copyLink(btnInsta));
    }
</script>

<style>
    @keyframes shine {
        100% { transform: translateX(100%); }
    }
    .animate-shine { animation: shine 1.5s infinite; }
    
    .custom-scrollbar::-webkit-scrollbar { width: 4px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background-color: #cbd5e1; border-radius: 20px; }
</style>