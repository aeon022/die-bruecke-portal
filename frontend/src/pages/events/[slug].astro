---
import MainLayout from '../../layouts/layout.astro';
import { directus } from '../../lib/directus';
import { getEventBySlug, getEvents } from '../../lib/api';
import pkg from 'rrule';
const { RRule } = pkg; 

const { slug } = Astro.params;

// URL Parameter prüfen
const urlDateParam = Astro.url.searchParams.get('date');

const event = await getEventBySlug(slug as string);
const allEvents = await getEvents();

if (!event) {
  return Astro.redirect('/404');
}

// --- HERO IMAGE LOGIK ---
const heroImage = event.hero_image || event.image;

// --- WIEDERHOLUNGS-LOGIK (RRule) ---
const dbStartDate = new Date(event.start_date);
const dbEndDate = event.end_date ? new Date(event.end_date) : null;
const duration = dbEndDate ? (dbEndDate.getTime() - dbStartDate.getTime()) : (2 * 60 * 60 * 1000); 

let allDates: Date[] = [dbStartDate]; 

if (event.recurrence && event.recurrence !== 'none' && event.recurrence_end) {
    let ruleOptions = {
        freq: RRule.WEEKLY, 
        interval: 1,
        dtstart: dbStartDate,
        until: new Date(event.recurrence_end)
    };

    switch (event.recurrence) {
        case 'biweekly':
            ruleOptions.freq = RRule.WEEKLY;
            ruleOptions.interval = 2;
            break;
        case 'monthly':
            ruleOptions.freq = RRule.MONTHLY;
            if (event.monthly_type === 'weekday') {
                const jsDay = dbStartDate.getDay();
                const rruleDays = [RRule.SU, RRule.MO, RRule.TU, RRule.WE, RRule.TH, RRule.FR, RRule.SA];
                const nthPosition = Math.ceil(dbStartDate.getDate() / 7);
                ruleOptions.byweekday = rruleDays[jsDay];
                ruleOptions.bysetpos = nthPosition;
            }
            break;
        default: 
            ruleOptions.freq = RRule.WEEKLY;
            ruleOptions.interval = 1;
    }

    const rule = new RRule(ruleOptions);
    const generatedDates = rule.all();

    allDates = generatedDates.map(date => {
        const fixedDate = new Date(date);
        fixedDate.setHours(dbStartDate.getHours());
        fixedDate.setMinutes(dbStartDate.getMinutes());
        return fixedDate;
    });
}

// --- ANZEIGE DATUM ---
const now = new Date();
let displayDate = dbStartDate;

if (urlDateParam) {
    const parsed = new Date(urlDateParam);
    if (!isNaN(parsed.getTime())) {
        parsed.setHours(dbStartDate.getHours(), dbStartDate.getMinutes());
        displayDate = parsed;
    }
} else {
    const nextUpcoming = allDates.find(d => d >= now);
    if (nextUpcoming) {
        displayDate = nextUpcoming;
    } else {
        displayDate = allDates[allDates.length - 1];
    }
}

const displayEndDate = new Date(displayDate.getTime() + duration);

// --- FORMATIERUNG ---
const dateString = displayDate.toLocaleDateString('de-DE', { day: '2-digit', month: 'long', year: 'numeric' });
const timeString = displayDate.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
const weekday = displayDate.toLocaleDateString('de-DE', { weekday: 'long' });

const relatedEvents = allEvents
    .filter((e: any) => e.id !== event.id)
    .slice(0, 3);

const ASSET_URL = 'http://localhost:8055/assets';
const getCatName = (cat: any) => cat.event_categories_id?.name || cat.event_categories_id?.title || 'Event';

const formatGCalDate = (date: Date) => date.toISOString().replace(/-|:|\.\d\d\d/g, "");
const gCalUrl = `https://www.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(event.title)}&dates=${formatGCalDate(displayDate)}/${formatGCalDate(displayEndDate)}&details=${encodeURIComponent("Infos: https://diebruecke.cc/events/" + slug)}&location=${encodeURIComponent(event.location || "Die Brücke, Grabenstraße 39a, Graz")}&sf=true&output=xml`;

const currentUrl = `https://diebruecke.cc/events/${slug}`; 
const shareText = encodeURIComponent(`Event-Tipp: ${event.title}`);
---

<MainLayout title={event.title}>
  
    <section class="relative h-[60vh] lg:h-[70vh] min-h-[500px] overflow-hidden bg-slate-900">
        {heroImage && (
            <div class="absolute inset-0 opacity-40 blur-3xl scale-110">
                <img src={`${ASSET_URL}/${heroImage}`} class="w-full h-full object-cover" alt="" />
            </div>
        )}
        
        {heroImage ? (
            <img 
              src={`${ASSET_URL}/${heroImage}`} 
              alt={event.title} 
              class="absolute inset-0 w-full h-full object-contain md:object-cover relative z-10 transition-transform duration-[2s] hover:scale-105"
            />
        ) : (
            <div class="absolute inset-0 flex items-center justify-center z-10">
                <i class="fa-regular fa-image text-8xl text-white/20"></i>
            </div>
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-slate-50 via-slate-50/20 to-transparent dark:from-slate-950 dark:via-slate-900/50 z-20"></div>
    </section>

    <div class="relative z-30 -mt-32 px-4 sm:px-6 md:px-10 pb-24">
        <div class="max-w-7xl mx-auto">
            
            {/* --- CARD CONTAINER (Dark Mode angepasst) --- */}
            <div class="bg-white dark:bg-slate-900 rounded-[40px] shadow-2xl shadow-slate-200/50 dark:shadow-black/50 border border-slate-100 dark:border-slate-800 overflow-visible transition-colors duration-300">
                
                <div class="grid lg:grid-cols-12 gap-0 items-start relative">
                    
                    <div class="lg:col-span-8 p-8 md:p-14 min-h-[50vh]">
                        
                        {/* NEU: Backlink */}
                        <div class="mb-6">
                            <a href="/events" class="inline-flex items-center text-xs font-bold uppercase tracking-widest text-slate-400 hover:text-rose-500 transition-colors group">
                                <i class="fa-solid fa-arrow-left mr-2 group-hover:-translate-x-1 transition-transform"></i>
                                Zurück zur Übersicht
                            </a>
                        </div>

                        <div class="flex flex-wrap gap-3 mb-8">
                            {event.event_categories?.map((cat: any) => (
                                <span class="bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 border border-slate-200 dark:border-slate-700 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
                                    {getCatName(cat)}
                                </span>
                            ))}
                            {allDates.length > 1 && (
                                <span class="bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400 border border-rose-100 dark:border-rose-900/30 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
                                    <i class="fa-solid fa-repeat mr-1"></i> Serie
                                </span>
                            )}
                        </div>

                        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-extrabold text-slate-900 dark:text-white tracking-tighter leading-[1.1] mb-8">
                            {event.title}
                        </h1>

                        {/* Prose mit dark:prose-invert für automatische Farbumkehr */}
                        <div class="prose prose-lg prose-slate dark:prose-invert max-w-none font-medium leading-relaxed text-slate-600 dark:text-slate-300 prose-headings:font-display prose-headings:font-bold prose-a:text-rose-600 hover:prose-a:text-rose-700" set:html={event.description}>
                        </div>
                    </div>

                    <aside class="lg:col-span-4 bg-slate-50/80 dark:bg-slate-900/50 backdrop-blur-md border-t lg:border-t-0 lg:border-l border-slate-100 dark:border-slate-800 p-8 md:p-14 w-full rounded-tr-[40px] rounded-br-[40px] lg:sticky lg:top-32 lg:max-h-[calc(100vh-4rem)] overflow-y-auto custom-scrollbar">
                        
                        <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400 mb-8">Hard Facts</h3>
                        
                        <div class="space-y-8 mb-12">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 flex items-center justify-center text-rose-600 dark:text-rose-400 shadow-sm shrink-0">
                                    <i class="fa-regular fa-calendar text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 dark:text-white text-lg">{weekday}</span>
                                    <span class="block text-slate-500 dark:text-slate-400">{dateString}</span>
                                    {displayDate.getTime() !== dbStartDate.getTime() && (
                                        <span class="text-xs text-rose-500 font-bold uppercase tracking-wide mt-1 block">Termin der Serie</span>
                                    )}
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 flex items-center justify-center text-rose-600 dark:text-rose-400 shadow-sm shrink-0">
                                    <i class="fa-regular fa-clock text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 dark:text-white text-lg">{timeString} Uhr</span>
                                    <span class="block text-slate-500 dark:text-slate-400">Einlass ab 30 Min. vorher</span>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 flex items-center justify-center text-rose-600 dark:text-rose-400 shadow-sm shrink-0">
                                    <i class="fa-solid fa-location-dot text-xl"></i>
                                </div>
                                <div>
                                    <span class="block font-bold text-slate-900 dark:text-white text-lg">Die Brücke</span>
                                    <a href="/contact" class="block text-slate-500 dark:text-slate-400 hover:text-rose-600 dark:hover:text-rose-400 hover:underline decoration-rose-300 underline-offset-4 text-sm mt-1">
                                        {event.location || "Grabenstraße 39a, Graz"}
                                    </a>
                                </div>
                            </div>
                        </div>

                        {allDates.length > 1 && (
                            <div class="mb-10 pt-8 border-t border-slate-200 dark:border-slate-700">
                                <h4 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">
                                    Alle Termine ({allDates.length})
                                </h4>
                                <div class="space-y-2 max-h-40 overflow-y-auto custom-scrollbar pr-2">
                                    {allDates
                                        .filter(d => d >= now || d.getTime() === displayDate.getTime()) 
                                        .slice(0, 10) 
                                        .map((date) => {
                                            const isSelected = date.getTime() === displayDate.getTime();
                                            const isoDate = date.toISOString().split('T')[0];
                                            
                                            return (
                                                <a href={`?date=${isoDate}`} class={`flex items-center justify-between text-sm p-2 rounded-lg transition-colors 
                                                    ${isSelected 
                                                        ? 'bg-rose-50 dark:bg-rose-900/30 text-rose-700 dark:text-rose-300 font-bold' 
                                                        : 'hover:bg-white dark:hover:bg-slate-800 text-slate-600 dark:text-slate-400'}`}>
                                                    <span>{date.toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit', year: '2-digit' })}</span>
                                                    <span>{date.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' })}</span>
                                                </a>
                                            )
                                        })
                                    }
                                </div>
                            </div>
                        )}

                        <div class="space-y-4">
                            {/* Ticket Button: High Contrast in Dark Mode (White Button) */}
                            <a href="/contact" class="group relative block w-full text-center bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold text-lg py-5 rounded-2xl hover:bg-rose-600 dark:hover:bg-rose-400 dark:hover:text-white transition-all shadow-xl hover:shadow-rose-500/40 transform hover:-translate-y-1 overflow-hidden">
                                <span class="relative z-10 flex items-center justify-center gap-2">
                                    <i class="fa-solid fa-ticket"></i> Tickets kaufen
                                </span>
                                <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/20 dark:via-black/10 to-transparent -translate-x-full group-hover:animate-shine"></div>
                            </a>

                            <a href={gCalUrl} target="_blank" class="block w-full text-center bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 font-bold py-3 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white transition-colors text-sm flex items-center justify-center gap-2">
                                <i class="fa-regular fa-calendar-plus"></i> Termin im Kalender
                            </a>
                        </div>

                        <div class="mt-10 pt-8 border-t border-slate-200 dark:border-slate-700">
                            <p class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4 text-center">Freunde einladen</p>
                            
                            <div class="grid grid-cols-5 gap-2">
                                {/* Social Buttons: Dark Mode Fixes */}
                                <button onclick={`window.open('https://wa.me/?text=${shareText}%20${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-emerald-50 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 hover:bg-emerald-500 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="WhatsApp">
                                    <i class="fa-brands fa-whatsapp text-lg"></i>
                                </button>
                                
                                <button onclick={`window.open('https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 hover:bg-blue-600 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="Facebook">
                                    <i class="fa-brands fa-facebook-f text-lg"></i>
                                </button>

                                <button onclick={`window.open('https://twitter.com/intent/tweet?text=${shareText}&url=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-white hover:bg-black hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="X (Twitter)">
                                    <i class="fa-brands fa-x-twitter text-lg"></i>
                                </button>

                                <button onclick={`window.open('https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}')`} 
                                        class="h-10 rounded-lg bg-sky-50 dark:bg-sky-900/30 text-sky-700 dark:text-sky-400 hover:bg-sky-700 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center" title="LinkedIn">
                                    <i class="fa-brands fa-linkedin-in text-lg"></i>
                                </button>

                                <button id="share-insta" 
                                        class="h-10 rounded-lg bg-fuchsia-50 dark:bg-fuchsia-900/30 text-fuchsia-600 dark:text-fuchsia-400 hover:bg-gradient-to-tr hover:from-yellow-400 hover:via-red-500 hover:to-purple-500 hover:text-white transition-all transform hover:scale-110 active:scale-95 cursor-pointer flex items-center justify-center relative group" title="Link kopieren">
                                    <i class="fa-brands fa-instagram text-lg"></i>
                                </button>
                            </div>
                        </div>

                    </aside>
                </div>
            </div>

        </div>
    </div>

    {relatedEvents.length > 0 && (
        <section class="px-6 sm:px-10 pb-24 bg-white dark:bg-slate-950 transition-colors">
            <div class="max-w-7xl mx-auto">
                <div class="flex items-end justify-between mb-12 border-b border-slate-100 dark:border-slate-800 pb-6">
                    <h2 class="text-3xl md:text-4xl font-display font-bold text-slate-900 dark:text-white">Das könnte dich auch interessieren</h2>
                    <a href="/events" class="hidden md:inline-flex items-center gap-2 text-rose-600 font-bold hover:text-slate-900 dark:hover:text-white transition-colors">
                        Alles ansehen <i class="fa-solid fa-arrow-right"></i>
                    </a>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {relatedEvents.map((rel: any) => (
                         <a href={`/events/${rel.slug}`} class="group block bg-slate-50 dark:bg-slate-900 rounded-[32px] p-4 hover:bg-white dark:hover:bg-slate-800 border border-transparent hover:border-slate-100 dark:hover:border-slate-700 hover:shadow-xl transition-all duration-300">
                            <div class="aspect-[16/10] rounded-2xl overflow-hidden mb-6 relative">
                                {rel.image ? (
                                    <img src={`${ASSET_URL}/${rel.image}`} class="w-full h-full object-cover group-hover:scale-110 transition duration-700" alt={rel.title} />
                                ) : (
                                    <div class="w-full h-full bg-slate-200 dark:bg-slate-800 flex items-center justify-center text-slate-400 font-bold text-xs uppercase">Kein Bild</div>
                                )}
                                <div class="absolute top-3 left-3 bg-white/90 dark:bg-slate-900/90 backdrop-blur px-2 py-1 rounded-md text-[10px] font-bold text-rose-600 dark:text-rose-400 uppercase tracking-widest shadow-sm">
                                    {new Date(rel.start_date).toLocaleDateString('de-DE', { day: '2-digit', month: 'short' })}
                                </div>
                            </div>
                            <div class="px-2 pb-2">
                                <h3 class="text-xl font-display font-bold text-slate-900 dark:text-white mb-2 group-hover:text-rose-600 transition-colors line-clamp-2">
                                    {rel.title}
                                </h3>
                                <p class="text-slate-500 dark:text-slate-400 text-sm line-clamp-2">
                                    Mehr erfahren <span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
                                </p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    )}

</MainLayout>

<script>
    const btnInsta = document.getElementById('share-insta');
    
    function copyLink(btn) {
        if(!btn) return;
        navigator.clipboard.writeText(window.location.href);
        const originalHTML = btn.innerHTML;
        const originalClasses = btn.className;
        
        btn.innerHTML = '<i class="fa-solid fa-check"></i>';
        btn.className = "h-10 rounded-lg bg-green-100 text-green-700 flex items-center justify-center transition-all cursor-pointer";
        
        setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.className = originalClasses;
        }, 2000);
    }

    if (btnInsta) {
        btnInsta.addEventListener('click', () => copyLink(btnInsta));
    }
</script>

<style>
    @keyframes shine {
        100% { transform: translateX(100%); }
    }
    .animate-shine { animation: shine 1.5s infinite; }
    
    .custom-scrollbar::-webkit-scrollbar { width: 4px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background-color: #cbd5e1; border-radius: 20px; }
    
    /* Dark scrollbar */
    html.dark .custom-scrollbar::-webkit-scrollbar-thumb { background-color: #475569; }
</style>