---
import Layout from '../layouts/layout.astro';
import { getEvents, getGlobalSettings } from '../lib/api';

// Daten laden
const [globalSettings, events] = await Promise.all([
  getGlobalSettings(),
  getEvents()
]);

const ASSET_URL = 'http://localhost:8055/assets';

// Helper f√ºr Bild-URL (falls im CMS keins gesetzt ist, nehmen wir null)
const heroImage = globalSettings?.hero_image 
  ? `url('${ASSET_URL}/${globalSettings.hero_image}')` 
  : null;
---

<Layout>
  
  <section class="relative bg-primary text-white py-20 lg:py-32 overflow-hidden">
    
    {heroImage && (
      <div class="absolute inset-0 z-0 opacity-20 bg-cover bg-center" style={`background-image: ${heroImage}`}></div>
    )}

    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight tracking-tight">
        Willkommen in der <br/>
        <span class="text-secondary">Br√ºcke</span>
      </h1>
      
      <p class="text-lg md:text-xl text-accent max-w-2xl mx-auto mb-10 leading-relaxed">
        {globalSettings?.footer_text || 'Kultur, Begegnung und Soziales ‚Äì alles unter einem Dach.'}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/events" class="px-8 py-4 bg-tangerine hover:bg-white hover:text-primary text-white font-bold rounded-lg transition-all shadow-lg transform hover:-translate-y-1">
          Veranstaltungen entdecken
        </a>
        <a href="/services" class="px-8 py-4 bg-transparent border-2 border-secondary text-secondary hover:bg-secondary hover:text-primary font-bold rounded-lg transition-all">
          Unsere Angebote
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-surface-muted">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-end mb-8">
        <div>
          <h2 class="text-3xl font-bold text-primary mb-2">Kommende Termine</h2>
          <div class="h-1 w-20 bg-tangerine rounded-full"></div>
        </div>
        <a href="/events" class="text-primary hover:text-tangerine font-medium hidden md:block">Alle ansehen &rarr;</a>
      </div>
      
      {events.length === 0 && (
        <p class="text-gray-500 italic">Aktuell keine Termine ver√∂ffentlicht.</p>
      )}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {events.map((event) => (
          <article class="bg-surface rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden group flex flex-col h-full border border-gray-100">
            
            <a href={`/events/${event.slug}`} class="block overflow-hidden h-56 relative">
              {event.image ? (
                <img 
                  src={`${ASSET_URL}/${event.image}`} 
                  alt={event.title} 
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              ) : (
                <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">Kein Bild</div>
              )}
              
              {/* Datums-Badge (Overlay) */}
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-md shadow-sm text-center">
                <span class="block text-xl font-bold text-primary leading-none">
                  {new Date(event.start_date).getDate()}
                </span>
                <span class="block text-xs text-gray-600 uppercase">
                  {new Date(event.start_date).toLocaleString('de-DE', { month: 'short' })}
                </span>
              </div>
            </a>

            <div class="p-6 flex flex-col flex-grow">
              <div class="mb-3">
                 {event.category && typeof event.category !== 'number' && (
                    <span class="text-xs font-bold px-2 py-1 rounded text-white inline-block tracking-wide uppercase" 
                          style={`background-color: ${event.category.color || '#006D77'}`}>
                      {event.category.name}
                    </span>
                 )}
              </div>

              <h3 class="text-xl font-bold text-gray-900 mb-3 leading-snug">
                <a href={`/events/${event.slug}`} class="hover:text-tangerine transition-colors">
                  {event.title}
                </a>
              </h3>
              
              <div class="mt-auto pt-4 border-t border-gray-100 flex justify-between items-center text-sm text-gray-500">
                <span class="flex items-center gap-1">
                  üïí {new Date(event.start_date).toLocaleTimeString('de-DE', { hour: '2-digit', minute:'2-digit' })}
                </span>
                {event.location && (
                   <span class="flex items-center gap-1 truncate max-w-[50%]">
                     üìç {event.location}
                   </span>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="mt-8 text-center md:hidden">
        <a href="/events" class="inline-block text-primary font-bold border-b-2 border-tangerine pb-1">Alle Termine ansehen</a>
      </div>

    </div>
  </section>
</Layout>