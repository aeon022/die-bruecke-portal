---
import Layout from '../layouts/layout.astro'; // "l"ayout klein, passend zum Dateinamen
import { getEvents, getGlobalSettings } from '../lib/api';

// 1. Daten über unsere saubere API holen
// Wir nutzen Promise.all für Performance (beides gleichzeitig laden)
const [globalSettings, events] = await Promise.all([
  getGlobalSettings(),
  getEvents()
]);

// 2. Helper für Bilder (Zentral definiert für den lokalen Docker-Container)
// Später tauschen wir das gegen eine ENV-Variable aus.
const ASSET_URL = 'http://localhost:8055/assets';

const getImageUrl = (imageId: string) => {
  return imageId ? `${ASSET_URL}/${imageId}` : null;
};
---

<Layout>
  <div class="container mx-auto p-8">
    
    <header class="mb-12 border-b pb-4">
      <h1 class="text-4xl font-bold text-blue-900">
        {globalSettings?.project_name || 'Die Brücke'}
      </h1>
      <p class="text-gray-600 mt-2">Willkommen auf dem neuen Portal.</p>
    </header>

    <section>
      <h2 class="text-2xl font-semibold mb-6">Kommende Veranstaltungen</h2>
      
      {/* Fallback, falls API leer ist */}
      {events.length === 0 && (
        <p class="text-gray-500 italic">Aktuell keine veröffentlichten Veranstaltungen.</p>
      )}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        {events.map((event) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100 flex flex-col h-full">
            
            {/* --- BILD LOGIK --- */}
            {event.image ? (
              <img 
                src={getImageUrl(event.image)} 
                alt={event.title} 
                class="w-full h-48 object-cover"
              />
            ) : (
              <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400">
                Kein Bild vorhanden
              </div>
            )}

            <div class="p-6 flex flex-col flex-grow">
              <div class="mb-2">
                 {/* Kategorie Badge (Optional, da wir es jetzt in den Daten haben) */}
                 {event.category && typeof event.category !== 'number' && (
                    <span class="text-xs font-bold px-2 py-1 rounded text-white mb-2 inline-block" 
                          style={`background-color: ${event.category.color || '#666'}`}>
                      {event.category.name}
                    </span>
                 )}
                 <h3 class="text-xl font-bold text-gray-900">{event.title}</h3>
              </div>
              
              <p class="text-sm text-blue-600 font-semibold mb-4">
                {event.start_date ? new Date(event.start_date).toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit', year: 'numeric' }) : 'TBA'}
              </p>
              
              {/* Teaser oder Description nutzen */}
              <div class="prose prose-sm text-gray-600 mb-4 line-clamp-3" set:html={event.teaser || event.description}></div>

              <div class="mt-auto">
                 <a href={`/events/${event.slug}`} class="inline-block text-blue-600 hover:text-blue-800 font-medium">
                   Mehr erfahren &rarr;
                 </a>
              </div>
            </div>
          </article>
        ))}

      </div>
    </section>

  </div>
</Layout>