                <div class="space-y-24 md:space-y-32 relative z-10">
                    {history.map((item, idx) => (
                        <div class={`flex flex-col md:flex-row items-center gap-8 md:gap-16 timeline-item opacity-20 transition-opacity duration-700 ${idx % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
                            
                            <div class={`flex-1 ${idx % 2 === 0 ? 'md:text-right' : 'md:text-left'} text-left`}>
                                <span class="text-6xl font-display font-extrabold text-slate-200 block mb-2">{item.year}</span>
                                <h3 class="text-2xl font-bold text-slate-900 mb-4">{item.title}</h3>
                                <p class="text-slate-500 leading-relaxed font-medium">{item.desc}</p>
                            </div>

                            <div class="absolute left-8 md:left-1/2 w-4 h-4 rounded-full bg-white border-4 border-rose-600 -translate-x-1/2 shadow-[0_0_0_8px_rgba(255,255,255,1)]"></div>

                            <div class="flex-1 hidden md:block"></div>
                        </div>
                    ))}
                </div>

                <div class="absolute bottom-0 left-8 md:left-1/2 w-8 h-8 rounded-full bg-rose-600 -translate-x-1/2 text-white flex items-center justify-center text-xs mt-12 shadow-xl z-20">
                    <i class="fa-solid fa-arrow-down"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 sm:px-10 py-32 bg-slate-900 text-white">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-20 items-center">
                <div>
                    <h2 class="text-4xl md:text-6xl font-display font-bold mb-8">Was uns antreibt.</h2>
                    <div class="space-y-12">
                        <div class="flex gap-6">
                            <div class="w-12 h-12 rounded-full bg-rose-600 flex-shrink-0 flex items-center justify-center text-xl">
                                <i class="fa-solid fa-heart"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2">Menschlichkeit</h3>
                                <p class="text-slate-400 leading-relaxed">Wir begegnen jedem Menschen auf Augenhöhe. Empathie ist keine Floskel, sondern unser Werkzeug.</p>
                            </div>
                        </div>
                        <div class="flex gap-6">
                            <div class="w-12 h-12 rounded-full bg-indigo-600 flex-shrink-0 flex items-center justify-center text-xl">
                                <i class="fa-solid fa-hand-fist"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2">Selbstbestimmung</h3>
                                <p class="text-slate-400 leading-relaxed">Wir bevormunden nicht. Wir geben Hilfe zur Selbsthilfe, damit jeder sein Leben selbst gestalten kann.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-white/5 p-8 rounded-3xl border border-white/10 text-center">
                        <span class="block text-5xl font-display font-bold text-rose-500 mb-2">45+</span>
                        <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Mitarbeiter:innen</span>
                    </div>
                    <div class="bg-white/5 p-8 rounded-3xl border border-white/10 text-center">
                        <span class="block text-5xl font-display font-bold text-indigo-500 mb-2">300</span>
                        <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Events / Jahr</span>
                    </div>
                    <div class="bg-white/5 p-8 rounded-3xl border border-white/10 text-center col-span-2">
                        <span class="block text-5xl font-display font-bold text-white mb-2">100%</span>
                        <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Leidenschaft</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 sm:px-10 py-32 bg-white">
        <div class="max-w-7xl mx-auto">
            
            <div class="text-center max-w-3xl mx-auto mb-20">
                <h2 class="text-4xl md:text-6xl font-display font-bold text-slate-900 mb-6">Die Menschen dahinter.</h2>
                <p class="text-xl text-slate-500">
                    Ein starker Verein braucht starke Persönlichkeiten. Unser Vorstand lenkt die Geschicke strategisch, unser operatives Team sorgt dafür, dass der Alltag läuft.
                </p>
            </div>

            <div class="mb-24">
                <div class="flex items-center gap-4 mb-10">
                    <div class="h-px bg-slate-200 flex-1"></div>
                    <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400">Der Vorstand (Ehrenamtlich)</h3>
                    <div class="h-px bg-slate-200 flex-1"></div>
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    {board.map(member => (
                        <div class="group bg-slate-50 rounded-[32px] p-2 hover:bg-white hover:shadow-xl transition-all duration-300 border border-slate-100">
                            <div class="aspect-square rounded-[24px] overflow-hidden mb-4 relative">
                                <img src={member.img} alt={member.name} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition duration-500" />
                            </div>
                            <div class="px-4 pb-4">
                                <h4 class="text-lg font-bold text-slate-900">{member.name}</h4>
                                <p class="text-rose-600 text-xs font-bold uppercase tracking-wider">{member.role}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            <div>
                <div class="flex items-center gap-4 mb-10">
                    <div class="h-px bg-slate-200 flex-1"></div>
                    <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400">Operatives Team & Support</h3>
                    <div class="h-px bg-slate-200 flex-1"></div>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    {team.map(member => (
                        <div class="text-center group">
                            <div class="w-24 h-24 md:w-32 md:h-32 rounded-full mx-auto overflow-hidden mb-4 border-2 border-slate-100 group-hover:border-rose-500 transition-colors">
                                <img src={member.img} alt={member.name} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition duration-500" />
                            </div>
                            <h4 class="font-bold text-slate-900 text-sm">{member.name}</h4>
                            <p class="text-slate-500 text-xs">{member.role}</p>
                        </div>
                    ))}
                </div>
            </div>

        </div>
    </section>

    <section class="px-6 sm:px-10 py-24 bg-slate-50 border-t border-slate-200">
        <div class="max-w-5xl mx-auto bg-white rounded-[40px] p-8 md:p-16 shadow-xl border border-slate-100">
            <div class="grid md:grid-cols-2 gap-12">
                <div>
                    <h3 class="text-2xl font-display font-bold mb-4">Transparenz</h3>
                    <p class="text-slate-500 mb-6 leading-relaxed">
                        Wir finanzieren uns durch öffentliche Mittel (Land Steiermark), Mitgliedsbeiträge und Spenden. Wir legen Wert auf maximale Transparenz.
                    </p>
                    <a href="#" class="text-rose-600 font-bold hover:underline">Jahresbericht 2024 laden</a>
                </div>
                <div>
                    <h3 class="text-2xl font-display font-bold mb-4">Mitglied werden</h3>
                    <p class="text-slate-500 mb-6 leading-relaxed">
                        Unterstütze unsere Arbeit als förderndes Mitglied. Schon ab 30€ im Jahr hilfst du uns, Brücken zu bauen.
                    </p>
                    <a href="/contact" class="inline-block px-6 py-3 bg-slate-900 text-white rounded-full text-sm font-bold hover:bg-rose-600 transition">
                        Beitrittserklärung anfordern
                    </a>
                </div>
            </div>
        </div>
    </section>

</MainLayout>

<script>
    function initTimeline() {
        const container = document.getElementById('timelineContainer');
        const fillLine = document.getElementById('timelineProgress');
        const items = document.querySelectorAll('.timeline-item');

        if (!container || !fillLine) return;

        const handleScroll = () => {
            const rect = container.getBoundingClientRect();
            const viewportHeight = window.innerHeight;
            
            // Startpunkt: Wenn der Container das untere Drittel des Bildschirms erreicht
            const startOffset = viewportHeight * 0.8; 
            
            // Berechnung, wie viel Prozent des Containers wir "durchscrollt" haben
            // Wir wollen, dass die Linie quasi "mitläuft" bis zur Mitte des Screens
            let progress = (viewportHeight / 2 - rect.top) / rect.height;
            
            // Begrenzen auf 0 bis 100%
            progress = Math.max(0, Math.min(1, progress));
            
            fillLine.style.height = `${progress * 100}%`;

            // Items einblenden, wenn die Linie sie erreicht
            items.forEach((item, index) => {
                const itemRect = item.getBoundingClientRect();
                const itemCenter = itemRect.top + itemRect.height / 2;
                // Wenn die Mitte des Screens unterhalb des Items ist -> aktiv
                if (itemCenter < viewportHeight * 0.75) {
                    item.classList.remove('opacity-20');
                    item.classList.add('opacity-100');
                } else {
                    item.classList.remove('opacity-100');
                    item.classList.add('opacity-20');
                }
            });
        };

        window.addEventListener('scroll', handleScroll);
        // Einmal initial aufrufen
        handleScroll();
    }

    // Init bei Load und View Transitions
    initTimeline();
    document.addEventListener('astro:after-swap', initTimeline);
</script>