---
import MainLayout from '../layouts/MainLayout.astro';
import { getServices } from '../lib/api';

// Optional: Falls du später Texte aus Directus laden willst
const servicesFromApi = await getServices();
const ASSET_URL = 'http://localhost:8055/assets';

// Statische Daten aus deiner Recherche (Die Brücke Website + LEVO)
const mobileServices = [
  {
    title: "Freizeitassistenz",
    short: "ASS-F",
    icon: "fa-solid fa-person-hiking",
    color: "bg-emerald-50 text-emerald-600 border-emerald-100",
    description: "Wir gestalten Freizeit selbstbestimmt. Von Kinobesuchen über Sport bis hin zum gemütlichen Kaffeehausbesuch.",
    details: [
      "Kennenlernen verschiedener Freizeitangebote",
      "Förderung der Eigenständigkeit und Mobilität",
      "Begleitung in der Gruppe oder Einzeln",
      "Abrechnung über LEVO-StBHG möglich (90% Kostenübernahme)"
    ]
  },
  {
    title: "Familienentlastung",
    short: "FED",
    icon: "fa-solid fa-hands-holding-child",
    color: "bg-blue-50 text-blue-600 border-blue-100",
    description: "Entlastung für pflegende Angehörige. Wir kommen zu Ihnen nach Hause – stundenweise oder tageweise.",
    details: [
      "Unterstützung im Pflege- und Betreuungsalltag",
      "Erhalt des gewohnten Lebensumfelds",
      "Krisenmanagement und Notfallhilfe",
      "Kreative und spielerische Förderung zu Hause"
    ]
  },
  {
    title: "Wohnassistenz",
    short: "ASS-W",
    icon: "fa-solid fa-house-chimney-user",
    color: "bg-amber-50 text-amber-600 border-amber-100",
    description: "Der Weg in die eigenen vier Wände. Wir unterstützen beim selbstständigen Wohnen und Leben.",
    details: [
      "Hilfe bei Wohnungssuche und Einrichtung",
      "Training von Haushaltsführung und Finanzen",
      "Unterstützung bei Behördenwegen",
      "Für ein selbstbestimmtes Leben in der eigenen Wohnung"
    ]
  }
];

const highlights = [
  {
    title: "City Trips",
    subtitle: "Europa entdecken",
    desc: "Ob Ljubljana, Budapest oder Salzburg – wir brechen aus dem Alltag aus. Unsere Städtetrips sind legendär und bieten Kultur, Spaß und echtes Reisefeeling in der Gruppe.",
    image: "https://images.unsplash.com/photo-1555990538-1e23340b3b2d?q=80&w=1600&auto=format&fit=crop", // Budapest Beispielbild
    tags: ["Kultur", "Reisen", "Gemeinschaft"]
  },
  {
    title: "Adventure Time",
    subtitle: "Grenzen testen",
    desc: "Segeln hart am Wind oder Klettern am Fels. Bei Adventure Time geht es um Sport, Mut und das Erlebnis in der Natur. Perfekt für alle, die Action suchen.",
    image: "https://images.unsplash.com/photo-1534447677768-be436bb09401?q=80&w=1600&auto=format&fit=crop", // Segeln Beispielbild
    tags: ["Segeln", "Klettern", "Action"]
  }
];
---

<MainLayout title="Angebote & Dienste">
    
    <section class="relative px-6 sm:px-10 pt-32 pb-20 bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto relative z-10">
            <span class="inline-block px-3 py-1 rounded-full bg-slate-100 text-slate-500 text-xs font-bold uppercase tracking-widest mb-6">
                Soziale Dienste & Projekte
            </span>
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-display font-extrabold text-slate-900 tracking-tighter mb-8 leading-[0.9]">
                Hilfe, die ankommt.<br>
                <span class="text-rose-600">Erlebnisse, die bleiben.</span>
            </h1>
            <p class="text-xl text-slate-500 max-w-2xl leading-relaxed font-medium">
                Als anerkannter Träger der Behindertenhilfe (LEVO-StBHG) bieten wir professionelle mobile Dienste und schaffen gleichzeitig Raum für außergewöhnliche Freizeitprojekte.
            </p>
        </div>
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-[600px] h-[600px] bg-rose-50 rounded-full blur-3xl opacity-50 pointer-events-none"></div>
    </section>

    <section class="px-6 sm:px-10 py-20 bg-white">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-end justify-between mb-12">
                <h2 class="text-3xl font-display font-bold text-slate-900">Mobile Dienste</h2>
                <span class="hidden md:block text-slate-400 text-sm font-bold uppercase tracking-widest">Nach Steiermärkischem Behindertengesetz</span>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {mobileServices.map(service => (
                    <div class={`rounded-[32px] p-8 border ${service.color.replace('text-', 'border-').replace('bg-', 'border-opacity-20 ')} bg-white hover:shadow-xl transition-all duration-500 group`}>
                        <div class={`w-14 h-14 rounded-2xl ${service.color} flex items-center justify-center text-2xl mb-6 group-hover:scale-110 transition-transform`}>
                            <i class={service.icon}></i>
                        </div>
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-2xl font-display font-bold text-slate-900">{service.title}</h3>
                            <span class="text-[10px] font-bold uppercase tracking-widest px-2 py-1 rounded bg-slate-100 text-slate-500">{service.short}</span>
                        </div>
                        <p class="text-slate-500 font-medium leading-relaxed mb-8">
                            {service.description}
                        </p>
                        <ul class="space-y-3">
                            {service.details.map(detail => (
                                <li class="flex items-start gap-3 text-sm text-slate-600">
                                    <i class="fa-solid fa-check text-rose-500 mt-1"></i>
                                    <span>{detail}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
            
            <div class="mt-12 p-6 rounded-2xl bg-slate-50 border border-slate-200 flex flex-col md:flex-row gap-6 items-center justify-between text-sm text-slate-500">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center shadow-sm text-slate-400">
                        <i class="fa-solid fa-info"></i>
                    </div>
                    <p>Die Kosten werden zu <strong>90% vom Land Steiermark</strong> übernommen (Selbstbehalt einkommensabhängig).</p>
                </div>
                <a href="/contact" class="whitespace-nowrap font-bold text-rose-600 hover:text-slate-900 transition-colors">
                    Beratungstermin vereinbaren <i class="fa-solid fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>
    </section>

    <section class="py-24 bg-slate-900 text-white overflow-hidden relative">
        <div class="px-6 sm:px-10 max-w-7xl mx-auto relative z-10">
            <div class="mb-16 max-w-3xl">
                <span class="text-rose-500 font-bold tracking-widest uppercase text-xs mb-4 block">Unsere Highlights</span>
                <h2 class="text-4xl md:text-6xl font-display font-bold mb-6">Mehr als nur Betreuung.</h2>
                <p class="text-slate-400 text-lg leading-relaxed">
                    Bei unseren Projekten geht es um Spaß, Gemeinschaft und das Erweitern des eigenen Horizonts. 
                    Ob beim Segeln hart am Wind oder beim Erkunden europäischer Metropolen.
                </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-8">
                {highlights.map((item, idx) => (
                    <div class={`group relative h-[500px] rounded-[40px] overflow-hidden ${idx === 1 ? 'lg:translate-y-12' : ''}`}>
                        <img src={item.image} alt={item.title} class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-1000 opacity-60" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent"></div>
                        
                        <div class="absolute bottom-0 left-0 p-10 md:p-14">
                            <div class="flex gap-2 mb-4">
                                {item.tags.map(tag => (
                                    <span class="px-3 py-1 rounded-full bg-white/10 backdrop-blur text-[10px] font-bold uppercase tracking-widest border border-white/10">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <h3 class="text-4xl font-display font-bold mb-2">{item.title}</h3>
                            <p class="text-rose-400 font-bold uppercase tracking-widest text-xs mb-6">{item.subtitle}</p>
                            <p class="text-slate-300 font-medium leading-relaxed max-w-sm mb-8 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500">
                                {item.desc}
                            </p>
                            <a href="/events" class="inline-flex items-center gap-2 font-bold text-white group-hover:text-rose-400 transition-colors">
                                Aktuelle Termine <i class="fa-solid fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="px-6 sm:px-10 py-24 bg-rose-600 text-white relative overflow-hidden">
        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 2px, transparent 2px); background-size: 30px 30px;"></div>

        <div class="max-w-5xl mx-auto text-center relative z-10">
            <i class="fa-solid fa-sun text-6xl mb-8 inline-block animate-spin-slow opacity-80"></i>
            <h2 class="text-4xl md:text-6xl font-display font-bold mb-6">Betreute Sommer-Urlaube</h2>
            <p class="text-xl md:text-2xl font-medium text-rose-100 max-w-3xl mx-auto leading-relaxed mb-12">
                Caorle, Mariazell, Tschechien oder Ungarn. <br class="hidden md:block"/>
                Wir organisieren unvergessliche Wochen voller Erholung und Abenteuer.
            </p>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-left">
                {[
                    { loc: "Italien / Caorle", icon: "fa-water" },
                    { loc: "Tschechien / Novomlýnské", icon: "fa-tree" },
                    { loc: "Österreich / Mariazell", icon: "fa-mountain" },
                    { loc: "Ungarn / Balaton", icon: "fa-umbrella-beach" }
                ].map(dest => (
                    <div class="bg-white/10 backdrop-blur rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-colors">
                        <i class={`fa-solid ${dest.icon} text-2xl mb-3 block`}></i>
                        <span class="font-bold text-sm tracking-wide block">{dest.loc}</span>
                    </div>
                ))}
            </div>

            <div class="mt-16">
                <a href="/contact" class="bg-white text-rose-600 px-10 py-4 rounded-full font-bold shadow-xl hover:bg-slate-900 hover:text-white transition-all transform hover:scale-105 inline-flex items-center gap-2">
                    <i class="fa-regular fa-calendar-check"></i>
                    Jetzt für Sommer 2025 anfragen
                </a>
            </div>
        </div>
    </section>

</MainLayout>