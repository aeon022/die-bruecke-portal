---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
import { getGlobalSettings } from '../lib/api';

const settings = await getGlobalSettings();
const projectName = settings?.project_name || 'Die Brücke';
---

<MainLayout title="Kontakt">
    
    <section class="relative z-10 px-6 sm:px-10 pt-32 pb-16 bg-white">
        <div class="max-w-4xl">
            <span class="text-rose-500 font-bold tracking-widest uppercase text-xs mb-4 block">Kontakt & Anfahrt</span>
            <h1 class="text-5xl sm:text-7xl font-display font-extrabold text-slate-900 tracking-tighter leading-tight mb-8">
                Sag <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-600 to-orange-400">Hallo.</span>
            </h1>
            <p class="text-xl text-slate-500 max-w-2xl leading-relaxed">
                Egal ob du eine Frage zu unseren Angeboten hast, einen Raum mieten möchtest oder einfach nur vorbeischauen willst – wir freuen uns auf dich.
            </p>
        </div>
    </section>

    <section class="relative z-10 px-6 sm:px-10 pb-24 bg-white">
        <div class="grid lg:grid-cols-2 gap-16 max-w-7xl mx-auto">
            
            <div class="space-y-12">
                <div class="grid sm:grid-cols-2 gap-8">
                    <div class="p-8 rounded-3xl bg-slate-50 border border-slate-100 shadow-sm hover:shadow-md transition">
                        <div class="w-12 h-12 rounded-2xl bg-white flex items-center justify-center text-rose-500 mb-6 shadow-sm">
                            <i class="fa-solid fa-location-dot text-xl"></i>
                        </div>
                        <h3 class="text-xl font-display font-bold text-slate-900 mb-2">Besuche uns</h3>
                        <p class="text-slate-500 leading-relaxed">
                            Brückenstraße 1<br>
                            8020 Graz, Österreich
                        </p>
                    </div>

                    <div class="p-8 rounded-3xl bg-slate-50 border border-slate-100 shadow-sm hover:shadow-md transition">
                        <div class="w-12 h-12 rounded-2xl bg-white flex items-center justify-center text-rose-500 mb-6 shadow-sm">
                            <i class="fa-solid fa-phone text-xl"></i>
                        </div>
                        <h3 class="text-xl font-display font-bold text-slate-900 mb-2">Direkt-Kontakt</h3>
                        <p class="text-slate-500 leading-relaxed">
                            info@bruecke.at<br>
                            +43 316 123 456
                        </p>
                    </div>
                </div>

                <div class="w-full h-[300px] rounded-4xl overflow-hidden shadow-inner grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition duration-700 bg-slate-200 ring-1 ring-black/5">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2720.6756616422!2d15.426!3d47.071!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x476e35907409099b%3A0x6d9f807f4a56a64d!2zR3Jheiwgw5ZzdGVycmVpY2g!5e0!3m2!1sde!2sat!4v1614123456789!5m2!1sde!2sat" 
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>

            <div class="bg-slate-900 rounded-4xl p-8 sm:p-12 text-white shadow-2xl relative overflow-hidden">
                <div class="absolute top-0 right-0 w-64 h-64 bg-rose-600/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
                
                <h2 class="text-3xl font-display font-bold mb-8 relative z-10">Schreib uns eine Nachricht</h2>
                
                <form class="space-y-6 relative z-10">
                    <div class="grid sm:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">Name</label>
                            <input type="text" placeholder="Dein Name" class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 focus:outline-none focus:border-rose-500 transition text-white" />
                        </div>
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">E-Mail</label>
                            <input type="email" placeholder="hallo@beispiel.at" class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 focus:outline-none focus:border-rose-500 transition text-white" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">Betreff</label>
                        <select class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 focus:outline-none focus:border-rose-500 transition text-white appearance-none">
                            <option class="bg-slate-900">Allgemeine Anfrage</option>
                            <option class="bg-slate-900">Raumvermietung</option>
                            <option class="bg-slate-900">Kulturprogramm</option>
                            <option class="bg-slate-900">Beratungstermin</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-400 mb-2">Deine Nachricht</label>
                        <textarea rows="5" placeholder="Wie können wir dir helfen?" class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 focus:outline-none focus:border-rose-500 transition text-white resize-none"></textarea>
                    </div>

                    <button type="submit" class="w-full py-5 rounded-full bg-rose-600 hover:bg-white hover:text-slate-900 text-lg font-bold transition-all shadow-xl group">
                        Nachricht absenden <i class="fa-solid fa-paper-plane ml-2 group-hover:translate-x-1 transition"></i>
                    </button>
                </form>
            </div>

        </div>
    </section>

</MainLayout>