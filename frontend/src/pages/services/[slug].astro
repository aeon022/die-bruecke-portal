---
import MainLayout from '../layouts/layout.astro';
import { services } from '../../lib/serviceData';

// 1. Definition für den Build-Prozess
export async function getStaticPaths() {
  return services.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

// 2. Datenabruf
const { slug } = Astro.params;
let { service } = Astro.props;

if (!service) {
  service = services.find((s) => s.slug === slug);
}

if (!service) {
  throw new Error(`Service mit Slug "${slug}" nicht gefunden!`);
}
---

<MainLayout title={service.title}>
    
    {/* HERO SECTION */}
    <section class="relative pt-32 pb-32 lg:pb-40 px-6 sm:px-10 overflow-hidden">
        
        {/* FARBVERLAUF */}
        <div class="absolute top-0 inset-x-0 h-[800px] overflow-hidden pointer-events-none">
             <div class={`absolute left-1/2 -translate-x-1/2 -top-40 w-[1000px] h-[1000px] bg-gradient-to-b ${service.color} opacity-10 blur-[100px] rounded-full mix-blend-multiply`}></div>
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            
            {/* Zurück Link */}
            <div class="mb-12">
                <a href="/services" class="inline-flex items-center text-slate-500 hover:text-slate-900 font-bold transition-colors group text-sm uppercase tracking-widest">
                    <i class="fa-solid fa-arrow-left mr-2 group-hover:-translate-x-1 transition-transform"></i>
                    Zurück zur Übersicht
                </a>
            </div>

            <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-start">
                
                {/* LINKE SPALTE: Titel & Intro */}
                <div class="pt-4">
                    {/* Icon */}
                    <div class={`inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br ${service.color} text-white text-2xl shadow-lg mb-8`}>
                        <i class={`fa-solid ${service.icon}`}></i>
                    </div>

                    <h1 class="text-4xl md:text-6xl font-display font-extrabold text-slate-900 mb-6 tracking-tighter leading-[1.1]">
                        {service.title}
                    </h1>
                    
                    <p class="text-2xl md:text-3xl font-medium text-transparent bg-clip-text bg-gradient-to-r from-slate-500 to-slate-800 mb-8 leading-tight">
                        {service.subtitle}
                    </p>

                    <p class="text-lg text-slate-600 leading-relaxed max-w-lg">
                        {service.description}
                    </p>
                </div>

                {/* RECHTE SPALTE: Bild */}
                <div class="relative">
                     {/* Bild Container */}
                    <div class="relative z-10 rounded-[40px] overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-700 border-4 border-white bg-slate-100 aspect-[4/3]">
                        <img 
                            src={service.image} 
                            alt={service.title} 
                            class="w-full h-full object-cover"
                        />
                    </div>
                    {/* Deko Element dahinter */}
                    <div class={`absolute -inset-4 bg-gradient-to-br ${service.color} opacity-20 blur-2xl -z-10 rounded-[40px]`}></div>
                </div>

            </div>
        </div>
    </section>

    {/* CONTENT SECTION - NEU: pt-12 lg:pt-24 für deutlich mehr Abstand */}
    <section class="px-6 sm:px-10 pt-12 lg:pt-24 pb-24">
        <div class="max-w-7xl mx-auto">
            
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
                
                {/* HAUPTINHALT */}
                <div class="lg:col-span-7 lg:col-start-1">
                    <h2 class="text-2xl font-display font-bold text-slate-900 mb-6 border-b border-slate-100 pb-4">
                        Details & Infos
                    </h2>

                    <div class="prose prose-lg prose-slate text-slate-500 leading-relaxed mb-12 focus:outline-none" set:html={service.content}></div>

                    {/* Kontakt Box */}
                    <div class="bg-slate-50 border border-slate-100 rounded-3xl p-8 flex flex-col sm:flex-row items-center gap-6 mt-12">
                        <div class="w-12 h-12 rounded-full bg-slate-900 text-white flex items-center justify-center shrink-0 shadow-md">
                            <i class="fa-solid fa-phone"></i>
                        </div>
                        <div class="text-center sm:text-left flex-1">
                            <h3 class="font-bold text-slate-900 text-lg">Noch Fragen?</h3>
                            <p class="text-slate-500 text-sm">Wir helfen dir gerne persönlich weiter.</p>
                        </div>
                        <a href="tel:+43316672248" class="px-6 py-3 bg-white border border-slate-200 text-slate-900 font-bold rounded-full hover:bg-slate-900 hover:text-white transition-colors shadow-sm whitespace-nowrap">
                            0316 67 22 48
                        </a>
                    </div>
                </div>

                {/* SIDEBAR */}
                <div class="lg:col-span-4 lg:col-start-9 space-y-8">
                    
                    {/* DOWNLOAD BOX */}
                    {service.programDownload && (
                        <div class="bg-slate-50 rounded-3xl p-8 border-2 border-dashed border-slate-200 text-center relative overflow-hidden group hover:border-slate-400 transition-colors">
                            <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                                <i class="fa-solid fa-file-pdf text-8xl text-slate-900 transform rotate-12"></i>
                            </div>
                            
                            <div class="relative z-10">
                                <div class="w-14 h-14 mx-auto bg-white rounded-2xl shadow-sm flex items-center justify-center text-rose-500 text-2xl mb-4 group-hover:scale-110 transition-transform">
                                    <i class="fa-solid fa-cloud-arrow-down"></i>
                                </div>
                                <h3 class="text-lg font-bold text-slate-900 mb-2">
                                    {service.buttonText || "Programm downloaden"}
                                </h3>
                                <p class="text-sm text-slate-500 mb-6">
                                    Aktuelle Termine & Infos als PDF.
                                </p>
                                <a 
                                    href={service.programDownload} 
                                    target="_blank" 
                                    class="inline-flex items-center gap-2 px-6 py-3 bg-slate-900 text-white font-bold rounded-full hover:bg-slate-700 transition-colors text-sm w-full justify-center"
                                >
                                    PDF öffnen <i class="fa-solid fa-arrow-right text-xs"></i>
                                </a>
                            </div>
                        </div>
                    )}

                    {/* FEATURE BOX */}
                    <div class="bg-white rounded-3xl p-8 shadow-xl shadow-slate-200/50 border border-slate-100 relative overflow-hidden">
                        <div class={`absolute top-0 right-0 w-32 h-32 bg-gradient-to-br ${service.color} opacity-5 rounded-bl-[100px] -mr-8 -mt-8 pointer-events-none`}></div>
                        
                        <h3 class="text-lg font-display font-bold text-slate-900 mb-6 flex items-center gap-2">
                            <i class="fa-solid fa-star text-yellow-400 text-sm"></i> Das erwartet dich
                        </h3>
                        <ul class="space-y-4">
                            {service.features.map(feature => (
                                <li class="flex items-start gap-3">
                                    <div class={`mt-1.5 w-1.5 h-1.5 rounded-full bg-gradient-to-r ${service.color} shrink-0`}></div>
                                    <span class="text-slate-600 font-medium text-sm leading-relaxed">{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    {/* FINANZIERUNG BOX */}
                    <div class="bg-slate-900 rounded-3xl p-8 text-white relative overflow-hidden">
                        <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-white/5 rounded-full blur-2xl"></div>
                        
                        <h3 class="text-lg font-bold mb-4 relative z-10 flex items-center gap-2">
                            <i class="fa-solid fa-wallet text-slate-400"></i> Kosten & Abrechnung
                        </h3>
                        
                        <div class="space-y-4 relative z-10 text-sm text-slate-300 leading-relaxed">
                            <p class="text-xs uppercase tracking-widest font-bold text-slate-500 mb-1">Rechtsgrundlage</p>
                            <p class="mb-4">Steiermärkisches Behindertengesetz (LEVO).</p>
                            
                            <div class="space-y-3 pt-4 border-t border-white/10">
                                <div class="flex gap-3">
                                    <i class="fa-solid fa-check text-emerald-400 mt-0.5"></i>
                                    <span>Bis zu <strong>100% Kostenübernahme</strong> (je nach Bescheid).</span>
                                </div>
                                <div class="flex gap-3">
                                    <i class="fa-solid fa-info-circle text-blue-400 mt-0.5"></i>
                                    <span>Selbstbehalt (10%) ist einkommensabhängig möglich.</span>
                                </div>
                                <div class="flex gap-3">
                                    <i class="fa-solid fa-user text-orange-400 mt-0.5"></i>
                                    <span>Privatzahlung ohne Bescheid möglich.</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* CTA BUTTON */}
                    <a href="/contact" class={`group block w-full py-4 rounded-full text-center font-bold text-white shadow-lg bg-gradient-to-r ${service.color} hover:shadow-xl hover:scale-[1.02] transition-all relative overflow-hidden`}>
                        <span class="relative z-10">Jetzt anfragen</span>
                        <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </a>

                </div>

            </div>
        </div>
    </section>

</MainLayout>