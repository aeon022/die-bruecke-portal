---
export const prerender = false;

import MainLayout from '../../layouts/layout.astro';
import { directus } from '../../lib/directus';
import { readItems } from '@directus/sdk';

// 1. Services aus Directus holen (DAS FEHLTE BEI DIR)
let services = [];
try {
  services = await directus.request(readItems('services', {
    sort: ['sort'], 
    filter: { status: { _eq: 'published' } }
  }));
} catch (error) {
  console.warn("Konnte Services nicht laden:", error.message);
}

// 2. Mit statischer Camps-Karte kombinieren
const allServices = [
  ...services,
  {
    title: "Camps & Travel",
    slug: "camps", // WICHTIG: Dieser Slug wird unten f√ºr den Link gepr√ºft
    color: "from-rose-500 to-indigo-600",
    icon: "fa-plane-departure",
    description: "Raus aus dem Alltag, rein ins Abenteuer. Wir organisieren barrierefreie Reisen und Camps mit professioneller Begleitung."
  }
];

const highlights = [
  {
    title: "City Trips",
    subtitle: "Europa ruft.",
    desc: "Prag, Wien oder Ljubljana? Wir warten nicht auf den Bus, wir starten das Abenteuer.",
    image: "https://images.unsplash.com/photo-1541849546-216549ae216d?q=80&w=1200", 
    tags: ["Travel", "Culture"]
  },
  {
    title: "Adventure Time",
    subtitle: "Adrenalin statt Alltag.",
    desc: "Ob beim Segeln oder am Fels in der Wand ‚Äì hier geht es nicht um 'Barrierefrei', sondern um 'Grenzenlos'.",
    image: "https://images.unsplash.com/photo-1534447677768-be436bb09401?q=80&w=1600&auto=format&fit=crop", 
    tags: ["Action", "Sport"]
  }
];
---

<MainLayout title="Services | Die Br√ºcke">
    
    {/* --- HERO SECTION --- */}
    <section class="px-4 sm:px-6 pt-6 pb-32">
        <div class="relative bg-slate-900 rounded-[48px] overflow-hidden min-h-[60vh] flex items-center px-6 md:px-16 py-20">
            
            {/* Background Effects */}
            <div class="absolute top-0 right-0 w-full md:w-2/3 h-full overflow-hidden pointer-events-none">
                <div class="absolute top-[-10%] right-[-10%] w-[600px] h-[600px] bg-indigo-500/20 rounded-full blur-[120px] animate-pulse-slow"></div>
                <div class="absolute bottom-[-10%] right-[10%] w-[500px] h-[500px] bg-rose-500/10 rounded-full blur-[100px]"></div>
                <div class="absolute inset-0 bg-[url('/noise.png')] opacity-20 mix-blend-overlay"></div>
            </div>

            <div class="max-w-7xl mx-auto w-full relative z-10 grid lg:grid-cols-2 gap-16 items-center">
                
                {/* Text Content */}
                <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-rose-300 text-xs font-bold uppercase tracking-widest mb-8 backdrop-blur-md">
                        <span class="w-2 h-2 rounded-full bg-rose-500 animate-pulse"></span>
                        Support & Lifestyle
                    </div>
                    
                    <h1 class="text-5xl md:text-7xl font-display font-bold text-white mb-8 leading-[0.95] tracking-tight">
                        Support f√ºr dein <br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-400 to-indigo-400">eigenes Ding.</span>
                    </h1>
                    
                    <p class="text-xl text-slate-300 leading-relaxed mb-10 max-w-lg font-medium">
                        Vergiss klassische "Betreuung". Wir liefern das Backup, das du brauchst, um dein Leben nach deinen Regeln zu gestalten. 
                    </p>
                    
                    <div class="flex flex-wrap gap-4">
                        <a href="#dienste" class="px-8 py-3 bg-white text-slate-900 rounded-full font-bold hover:bg-rose-500 hover:text-white transition-all shadow-lg hover:shadow-rose-500/20">
                            Angebote entdecken
                        </a>
                    </div>
                </div>

                {/* Image */}
                <div class="relative hidden lg:block perspective-1000">
                    <div class="relative z-10 rounded-[40px] overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-700 border border-white/10 bg-slate-800">
                        <img 
                             src="https://images.pexels.com/photos/1438072/pexels-photo-1438072.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
                             alt="Gruppe Freunde" 
                             class="w-full h-auto object-cover opacity-90 hover:opacity-100 transition-opacity"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent pointer-events-none"></div>
                    </div>
                    <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-rose-500/30 rounded-full blur-3xl -z-10"></div>
                </div>
            </div>
        </div>
    </section>


    {/* --- DIE 4 S√ÑULEN (Bento Grid) --- */}
    <section id="dienste" class="px-4 sm:px-6 pb-40">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-24">
                
                {allServices.map((service) => (
                    <a href={service.slug === 'camps' ? '/camps' : `/services/${service.slug}`} 
                       class="service-card group relative flex flex-col justify-between rounded-[32px] overflow-hidden transition-all duration-300 
                       bg-white dark:bg-slate-900 
                       border border-slate-100 dark:border-white/5 
                       shadow-xl shadow-slate-200/50 dark:shadow-none hover:-translate-y-2 hover:shadow-2xl">
                        
                        {/* 1. DEZENTER AKZENT: Farbige Linie oben */}
                        <div class={`h-1.5 w-full bg-gradient-to-r ${service.color || 'from-slate-700 to-slate-800'}`}></div>

                        {/* 2. HOVER GLOW: Ganz zarter Hintergrund beim Dr√ºberfahren */}
                        <div class={`absolute inset-0 bg-gradient-to-br ${service.color || 'from-slate-700 to-slate-800'} opacity-0 group-hover:opacity-[0.03] transition-opacity duration-500 pointer-events-none`}></div>

                        <div class="p-8 relative z-10 flex flex-col h-full">
                            
                            {/* 3. ICON: Kreis grau, Icon selbst hat den Farbverlauf */}
                            <div class="w-14 h-14 rounded-2xl bg-slate-50 dark:bg-slate-800 flex items-center justify-center text-2xl mb-6 group-hover:scale-110 transition-transform duration-500">
                                <i class={`fa-solid ${service.icon} text-transparent bg-clip-text bg-gradient-to-br ${service.color || 'from-slate-700 to-slate-900'}`}></i>
                            </div>
                            
                            <h2 class="text-xl md:text-2xl font-display font-bold text-slate-900 dark:text-white mb-3 tracking-tight leading-tight">
                                {service.title}
                            </h2>
                            
                            <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed line-clamp-4 font-medium mb-8 flex-grow">
                                {service.teaser || service.description?.replace(/<[^>]*>/g, '')}
                            </p>

                            {/* BUTTON UNTEN */}
                            <div class="mt-auto flex items-center gap-2 font-bold text-slate-900 dark:text-white text-sm uppercase tracking-widest">
                                <span class="text-xs group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-slate-900 group-hover:to-slate-600 dark:group-hover:text-white transition-colors">Details</span>
                                <i class={`fa-solid fa-arrow-right text-slate-300 group-hover:translate-x-2 transition-transform duration-300 group-hover:text-slate-900 dark:group-hover:text-white`}></i>
                            </div>
                        </div>
                    </a>
                ))}

            </div>

            {/* INFO HUB BANNER */}
            <a href="/info" class="group relative bg-indigo-600 rounded-[48px] p-10 md:p-14 overflow-hidden flex flex-col md:flex-row items-center justify-between gap-12 shadow-xl hover:shadow-indigo-500/30 transition-all duration-500">
                <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.1),transparent)] pointer-events-none"></div>
                <div class="absolute -right-20 -bottom-40 w-80 h-80 bg-rose-500 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-pulse"></div>
                
                <div class="relative z-10 flex flex-col md:flex-row items-center gap-8 text-center md:text-left">
                    <div class="w-20 h-20 rounded-3xl bg-white/10 flex items-center justify-center text-white text-3xl border border-white/20 backdrop-blur-sm shrink-0">
                        <i class="fa-solid fa-circle-info animate-pulse"></i>
                    </div>
                    <div>
                        <h2 class="text-3xl font-display font-bold text-white mb-3 tracking-tight">Noch unsicher?</h2>
                        <p class="text-indigo-100 max-w-xl font-medium leading-relaxed text-lg">
                            Unser Infozentrum ist deine Anlaufstelle f√ºr Orientierung & Rechte. Wir finden gemeinsam das passende Backup f√ºr dich.
                        </p>
                    </div>
                </div>
                
                <div class="relative z-10 shrink-0">
                    <span class="px-8 py-4 bg-white text-indigo-900 rounded-full font-bold group-hover:bg-slate-900 group-hover:text-white transition-all inline-flex items-center gap-3 shadow-lg">
                        Zum Infozentrum
                        <i class="fa-solid fa-chevron-right text-rose-500"></i>
                    </span>
                </div>
            </a>
        </div>
    </section>

    {/* --- FEATURED CAMPS --- */}
    <section class="px-4 sm:px-6 mb-40">
        <div class="mx-0 md:mx-0 rounded-[48px] px-8 py-24 md:py-32 bg-slate-900 border border-slate-800 relative overflow-hidden shadow-2xl">
            <div class="absolute top-0 right-0 w-1/2 h-full bg-rose-600/10 skew-x-12 translate-x-1/4 pointer-events-none"></div>
            
            <div class="max-w-7xl mx-auto relative z-10 grid lg:grid-cols-2 gap-20 items-center">
                <div>
                    <span class="text-rose-500 font-bold tracking-widest uppercase text-xs mb-6 block underline decoration-rose-500 decoration-2 underline-offset-8">Featured Service</span>
                    <h2 class="text-4xl md:text-7xl font-display font-extrabold text-white mb-8 tracking-tighter leading-tight">
                        Der Sommer <br/>geh√∂rt <span class="text-rose-500">dir.</span>
                    </h2>
                    <p class="text-xl text-slate-400 leading-relaxed mb-10 max-w-xl">
                        Egal ob Chillen am Balaton oder Action in den Bergen. Wir organisieren Wochen, von denen du noch im Winter erz√§hlen wirst. 
                    </p>
                    <a href="/camps" class="px-10 py-4 bg-rose-600 text-white rounded-full font-bold hover:bg-white hover:text-slate-900 transition-all shadow-xl inline-block hover:scale-105 transform">
                        Alle Camps entdecken
                    </a>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    {["Italien üáÆüáπ", "Tschechien üá®üáø", "√ñsterreich üá¶üáπ", "Ungarn üá≠üá∫"].map(loc => (
                        <div class="bg-white/5 border border-white/10 p-8 rounded-3xl text-center font-bold text-white backdrop-blur-sm hover:bg-white/10 transition-colors cursor-default text-lg">
                            {loc}
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    {/* --- HIGHLIGHTS --- */}
    <section class="px-4 sm:px-6 pb-40">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-4xl md:text-6xl font-display font-bold text-slate-900 dark:text-white tracking-tighter mb-20 text-center">
                Next Level <span class="italic text-slate-400">Specials.</span>
            </h2>
            <div class="grid lg:grid-cols-2 gap-10 md:gap-16">
                {highlights.map((item) => (
                    <div class="group relative h-[550px] rounded-[48px] overflow-hidden cursor-pointer shadow-lg hover:shadow-2xl transition-all duration-500 bg-slate-200 dark:bg-slate-800">
                        <img src={item.image} alt={item.title} class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-1000" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent"></div>
                        
                        <div class="absolute bottom-0 left-0 p-12 w-full">
                            <div class="flex gap-2 mb-4">
                                {item.tags.map(tag => (
                                    <span class="px-3 py-1 rounded-full bg-white/20 backdrop-blur text-white text-[10px] font-bold uppercase tracking-widest border border-white/10">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <h3 class="text-4xl font-display font-bold text-white mb-2">{item.title}</h3>
                            <p class="text-slate-200 font-medium text-xl mb-6">{item.subtitle}</p>
                            <p class="text-slate-300 text-base max-w-lg leading-relaxed opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-4 group-hover:translate-y-0">
                                {item.desc}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    {/* --- INFO BOX --- */}
    <section class="px-4 sm:px-6 pb-24">
        <div class="max-w-7xl mx-auto">
            <div class="p-10 md:p-20 bg-slate-50 dark:bg-slate-900 rounded-[48px] border border-slate-100 dark:border-slate-800 flex flex-col lg:flex-row items-center gap-16 text-center lg:text-left shadow-sm">
                <div class="flex-1">
                    <h3 class="text-3xl font-display font-bold text-slate-900 dark:text-white mb-6 tracking-tight">
                        Noch Fragen? <span class="text-rose-500">Kein Stress.</span>
                    </h3>
                    <p class="text-slate-500 dark:text-slate-400 leading-relaxed max-w-2xl font-medium text-lg">
                        Finanzierung, Ablauf oder einfach mal reinschnuppern? Wir kl√§ren das unb√ºrokratisch im Infozentrum. Ruf an oder komm auf einen Kaffee vorbei.
                    </p>
                </div>
                <div class="flex flex-col sm:flex-row gap-4 shrink-0">
                    <a href="/contact" class="px-10 py-5 bg-slate-900 dark:bg-white text-white dark:text-slate-900 rounded-full font-bold hover:bg-rose-600 dark:hover:bg-rose-500 hover:text-white transition-all shadow-lg text-center">
                        Termin vereinbaren
                    </a>
                    <a href="tel:+43316672248" class="px-10 py-5 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-white rounded-full font-bold hover:border-slate-900 dark:hover:border-slate-500 transition-all flex items-center justify-center gap-2">
                        <i class="fa-solid fa-phone text-rose-500"></i> 0316 67 22 48
                    </a>
                </div>
            </div>
        </div>
    </section>

    <style is:global>
        /* FORCE DARK MODE COLORS */
        html.dark .service-card {
            background-color: #0f172a !important; /* slate-900 */
            border-color: rgba(255,255,255,0.1) !important;
        }
        html.dark .service-title { color: #ffffff !important; }
        html.dark .service-desc { color: #94a3b8 !important; }
    </style>
</MainLayout>