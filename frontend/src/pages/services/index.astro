---
import MainLayout from '../../layouts/MainLayout.astro';
import { services } from '../../lib/serviceData';

const allServices = [
  ...services,
  {
    title: "Camps & Travel",
    slug: "camps",
    color: "from-rose-500 to-indigo-600",
    icon: "fa-plane-departure",
    description: "Raus aus dem Alltag, rein ins Abenteuer. Wir organisieren barrierefreie Reisen und Camps mit professioneller Begleitung."
  }
];

const highlights = [
  {
    title: "City Trips",
    subtitle: "Europa ruft.",
    desc: "Prag, Wien oder Ljubljana? Wir warten nicht auf den Bus, wir starten das Abenteuer. Entdecke neue St√§dte und fremde Kulturen.",
    image: "https://images.unsplash.com/photo-1541849546-216549ae216d?q=80&w=1200", 
    tags: ["Travel", "Culture", "Together"]
  },
  {
    title: "Adventure Time",
    subtitle: "Adrenalin statt Alltag.",
    desc: "Ob beim Segeln oder am Fels in der Wand ‚Äì hier geht es nicht um 'Barrierefrei', sondern um 'Grenzenlos'. F√ºr alle, die mehr wollen.",
    image: "https://images.unsplash.com/photo-1534447677768-be436bb09401?q=80&w=1600&auto=format&fit=crop", 
    tags: ["Action", "Sport", "Limits"]
  }
];
---

<MainLayout title="Services | Die Br√ºcke">
    
    <div class="home-content px-4 md:px-6">
        
        {/* --- HERO SECTION --- */}
        <section class="relative z-10 px-6 sm:px-10 pt-24 pb-32 bg-white rounded-t-[32px] md:rounded-t-[64px] overflow-hidden">
            <div class="absolute top-0 right-0 -mr-20 -mt-20 w-[600px] h-[600px] bg-rose-50 rounded-full blur-3xl opacity-40 pointer-events-none"></div>

            <div class="max-w-7xl mx-auto relative z-10 grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-50 border border-slate-200 text-xs font-bold text-rose-500 mb-8 uppercase tracking-widest shadow-sm">
                        <span class="text-[10px] mb-0.5">‚óè</span> Support & Lifestyle
                    </span>
                    <h1 class="text-5xl md:text-7xl font-display font-extrabold text-slate-900 mb-8 tracking-tighter leading-[0.9]">
                        Support f√ºr dein <br>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-indigo-600">eigenes Ding.</span>
                    </h1>
                    <p class="text-xl text-slate-500 leading-relaxed mb-10 max-w-lg font-medium">
                        Vergiss klassische "Betreuung". Wir liefern das Backup, das du brauchst, um dein Leben nach deinen Regeln zu gestalten. 
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a href="#dienste" class="px-8 py-3 bg-slate-900 text-white rounded-full font-bold hover:bg-rose-600 transition-all shadow-lg">
                            Angebote entdecken
                        </a>
                    </div>
                </div>

                <div class="relative hidden lg:block">
                    <div class="relative z-10 rounded-[40px] overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-700 border-4 border-white bg-slate-300">
                        <img 
                            src="https://images.pexels.com/photos/1438072/pexels-photo-1438072.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
                            alt="Gruppe Freunde" 
                            class="w-full h-auto object-cover"
                        />
                    </div>
                </div>
            </div>
        </section>

        {/* --- DIE 4 S√ÑULEN --- */}
        <section id="dienste" class="px-6 sm:px-10 py-24 bg-white">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                    {allServices.map((service) => (
                        <a href={service.slug === 'camps' ? '/camps' : `/services/${service.slug}`} class="group relative bg-slate-50 rounded-[40px] p-8 h-[420px] flex flex-col justify-between overflow-hidden hover:shadow-2xl transition-all duration-500 border border-slate-100">
                            <div class="relative z-10">
                                <div class={`w-14 h-14 rounded-2xl bg-white flex items-center justify-center text-slate-900 text-xl mb-8 shadow-sm group-hover:bg-rose-500 group-hover:text-white transition-all duration-500`}>
                                    <i class={`fa-solid ${service.icon}`}></i>
                                </div>
                                <h2 class="text-2xl font-display font-bold text-slate-900 mb-4 tracking-tight">
                                    {service.title}
                                </h2>
                                <p class="text-slate-500 text-sm leading-relaxed line-clamp-4 font-medium">
                                    {service.description}
                                </p>
                            </div>
                            <div class="relative z-10 flex items-center gap-2 font-bold text-slate-900 mt-auto text-sm uppercase tracking-widest">
                                <span>Details</span>
                                <i class="fa-solid fa-arrow-right text-rose-500 group-hover:translate-x-2 transition-transform"></i>
                            </div>
                        </a>
                    ))}
                </div>

                {/* NEU: LINK ZUM INFOZENTRUM ALS BREITE HUB-KARTE */}
