---
import MainLayout from '../../layouts/MainLayout.astro';
import { services } from '../../lib/serviceData';

// Zus√§tzliche Highlights
const highlights = [
  {
    title: "City Trips",
    subtitle: "Europa ruft.",
    desc: "Ljubljana, Budapest oder Salzburg? Wir warten nicht auf den Bus, wir starten das Abenteuer. Entdecke neue St√§dte, fremde Kulturen und das Gef√ºhl, einfach mal weg zu sein.",
    // BILD NEU: Pexels (sehr stabil) - Gruppe Freunde in der Stadt
    image: "https://images.pexels.com/photos/1251861/pexels-photo-1251861.jpeg?auto=compress&cs=tinysrgb&w=1600", 
    tags: ["Travel", "Culture", "Together"]
  },
  {
    title: "Adventure Time",
    subtitle: "Adrenalin statt Alltag.",
    desc: "Sp√ºrst du den Wind? Ob beim Segeln am Limit oder am Fels in der Wand ‚Äì hier geht es nicht um 'Barrierefrei', sondern um 'Grenzenlos'. F√ºr alle, die mehr wollen.",
    image: "https://images.unsplash.com/photo-1534447677768-be436bb09401?q=80&w=1600&auto=format&fit=crop", 
    tags: ["Action", "Sport", "Limits"]
  }
];
---

<MainLayout title="Soziale Dienste">
    
    {/* Hero Section */}
    <section class="relative pt-32 pb-20 px-6 sm:px-10 overflow-hidden">
        
        {/* Background Decor */}
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-[600px] h-[600px] bg-emerald-50 rounded-full blur-3xl opacity-50 pointer-events-none"></div>

        <div class="max-w-7xl mx-auto relative z-10 grid lg:grid-cols-2 gap-12 items-center">
            
            {/* LINKES SPALTE: Text */}
            <div>
                <span class="inline-block px-3 py-1 rounded-full bg-slate-100 text-slate-500 text-xs font-bold uppercase tracking-widest mb-6">
                    Support & Lifestyle
                </span>
                <h1 class="text-5xl md:text-7xl font-display font-extrabold text-slate-900 mb-8 tracking-tighter leading-[1.1]">
                    Mehr als nur Unterst√ºtzung. <br>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-500 to-teal-600">Echte Freiheit.</span>
                </h1>
                <p class="text-xl text-slate-500 leading-relaxed mb-10 max-w-lg">
                    Vergiss "Betreuung". Wir liefern den Support, den du brauchst, um dein Ding zu machen. Egal ob in der eigenen Wohnung, im Club oder auf Reisen. 
                </p>
                
                <div class="flex flex-wrap gap-4">
                    <a href="#dienste" class="px-8 py-3 bg-slate-900 text-white rounded-full font-bold hover:bg-emerald-600 transition-all shadow-lg hover:shadow-emerald-200">
                        Angebote entdecken
                    </a>
                    <a href="/contact" class="px-8 py-3 bg-white border border-slate-200 text-slate-900 rounded-full font-bold hover:border-slate-900 transition-colors">
                        Beratungstermin
                    </a>
                </div>
            </div>

            {/* RECHTE SPALTE: Bild-Komposition */}
            <div class="relative hidden lg:block">
                
                {/* Hauptbild - Pexels Fallback Background added */}
                <div class="relative z-10 rounded-[40px] overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-700 border-4 border-white bg-slate-300">
                    <img 
                        src="https://images.pexels.com/photos/1438072/pexels-photo-1438072.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
                        alt="Gruppe junger Freunde unterwegs" 
                        class="w-full h-auto object-cover"
                    />
                </div>

                {/* Deko Blob hinten */}
                <div class="absolute -top-10 -right-10 w-32 h-32 bg-teal-400 rounded-full mix-blend-multiply filter blur-2xl opacity-30 animate-pulse"></div>
            </div>

        </div>
    </section>

    {/* Die 3 Haupts√§ulen (FASS, FED, WASS) */}
    <section id="dienste" class="px-6 sm:px-10 pb-20">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-24">
                {services.map((service) => (
                    <a href={`/services/${service.slug}`} class="group relative bg-white rounded-[40px] p-8 h-[450px] flex flex-col justify-between overflow-hidden hover:shadow-2xl transition-all duration-500 border border-slate-100">
                        <div class={`absolute inset-0 bg-gradient-to-br ${service.color} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
                        <div class="relative z-10">
                            <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${service.color} flex items-center justify-center text-white text-2xl mb-8 shadow-lg group-hover:scale-110 transition-transform duration-500`}>
                                <i class={`fa-solid ${service.icon}`}></i>
                            </div>
                            <h2 class="text-3xl font-display font-bold text-slate-900 mb-4 group-hover:text-slate-900 transition-colors">
                                {service.title}
                            </h2>
                            <p class="text-slate-500 leading-relaxed line-clamp-4">
                                {service.description}
                            </p>
                        </div>
                        <div class="relative z-10 flex items-center gap-2 font-bold text-slate-900 mt-auto pt-8">
                            <span class="group-hover:underline decoration-2 underline-offset-4">Check das aus</span>
                            <i class="fa-solid fa-arrow-right group-hover:translate-x-2 transition-transform"></i>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    {/* Highlights Section */}
    <section class="mb-24 px-6 sm:px-10">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-end justify-between mb-12">
                <h2 class="text-3xl font-display font-bold text-slate-900">Unsere Highlights</h2>
                <span class="hidden md:block text-slate-400 text-sm font-bold uppercase tracking-widest">Next Level Projects</span>
            </div>
            <div class="grid lg:grid-cols-2 gap-8">
                {highlights.map((item) => (
                    <div class="group relative h-[400px] rounded-[40px] overflow-hidden cursor-pointer hover:shadow-2xl transition-all duration-500 bg-slate-200">
                        <img src={item.image} alt={item.title} class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-1000" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
                        
                        <div class="absolute bottom-0 left-0 p-10 w-full">
                            <div class="flex gap-2 mb-4">
                                {item.tags.map(tag => (
                                    <span class="px-3 py-1 rounded-full bg-white/20 backdrop-blur text-white text-[10px] font-bold uppercase tracking-widest border border-white/10">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <h3 class="text-3xl font-display font-bold text-white mb-2">{item.title}</h3>
                            <p class="text-slate-200 font-medium text-lg mb-2">{item.subtitle}</p>
                            <p class="text-slate-300 text-sm max-w-md leading-relaxed opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100 transform translate-y-2 group-hover:translate-y-0">
                                {item.desc}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    {/* Sommer Urlaube Teaser */}
    <section class="px-6 sm:px-10 pb-20">
        <div class="max-w-7xl mx-auto">
            <div class="bg-rose-600 rounded-[40px] p-12 text-white relative overflow-hidden flex flex-col md:flex-row items-center gap-12 shadow-2xl shadow-rose-200">
                <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 2px, transparent 2px); background-size: 30px 30px;"></div>
                <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

                <div class="relative z-10 flex-1">
                    <div class="flex items-center gap-3 mb-6">
                        <span class="px-3 py-1 rounded-full bg-white/20 backdrop-blur text-xs font-bold uppercase tracking-widest">Sommer 2025</span>
                        <i class="fa-solid fa-sun text-yellow-300 animate-spin-slow"></i>
                    </div>
                    <h3 class="text-3xl md:text-5xl font-display font-bold mb-6 tracking-tight">Der Sommer geh√∂rt dir.</h3>
                    <p class="text-rose-100 text-lg mb-8 leading-relaxed max-w-xl">
                        Egal ob Chillen am Balaton oder Action in den Bergen. Wir organisieren Wochen, von denen du noch im Winter erz√§hlen wirst. Pack die Badehose ein!
                    </p>
                    <div class="flex flex-wrap gap-3">
                        {["Italien üáÆüáπ", "Tschechien üá®üáø", "√ñsterreich üá¶üáπ", "Ungarn üá≠üá∫"].map(loc => (
                            <span class="bg-black/20 px-4 py-2 rounded-xl text-sm font-bold backdrop-blur border border-white/10">{loc}</span>
                        ))}
                    </div>
                </div>
                <div class="relative z-10">
                    <a href="/contact" class="group bg-white text-rose-600 px-8 py-4 rounded-full font-bold shadow-xl hover:bg-slate-900 hover:text-white transition-all inline-flex items-center gap-2 transform hover:-translate-y-1">
                        <span>Platz sichern</span>
                        <i class="fa-solid fa-paper-plane group-hover:translate-x-1 transition-transform"></i>
                    </a>
                </div>
            </div>

            {/* Info Box unten */}
            <div class="mt-24 p-8 md:p-12 bg-slate-50 rounded-[40px] border border-slate-100 flex flex-col md:flex-row items-start md:items-center gap-8">
                <div class="flex-1">
                    <h3 class="text-2xl font-display font-bold text-slate-900 mb-4">
                        <i class="fa-solid fa-circle-question text-emerald-500 mr-2"></i>
                        Noch Fragen? Kein Stress.
                    </h3>
                    <p class="text-slate-600 leading-relaxed max-w-2xl">
                        "Wie l√§uft das mit der Finanzierung?", "Kann ich das mal ausprobieren?" ‚Äì Wir h√∂ren das jeden Tag. Komm einfach im Infozentrum vorbei oder ruf durch. Wir kl√§ren das. Vertraulich & easy.
                    </p>
                </div>
                <div class="flex gap-4 flex-wrap">
                    <a href="/contact" class="px-8 py-3 bg-slate-900 text-white rounded-full font-bold hover:bg-emerald-600 transition-colors shadow-lg hover:shadow-emerald-200">
                        Termin ausmachen
                    </a>
                    <a href="tel:+43316672248" class="px-8 py-3 bg-white border border-slate-200 text-slate-900 rounded-full font-bold hover:border-slate-900 transition-colors flex items-center gap-2">
                        <i class="fa-solid fa-phone"></i> 0316 67 22 48
                    </a>
                </div>
            </div>
        </div>
    </section>

</MainLayout>